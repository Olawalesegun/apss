{
  // Logging config
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Allowed Cross-Origin hosts
  "AllowedHosts": "*",

  // Database connection string
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=APSS;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  // Authentication config
  "AuthSettings": {
    "CookieExpireTimeSpan": "7.00:00:00",
    "SlidingExpiration": true,
    "AllowRefresh": true,
    "PersistentCookies": true
  },

  // Token generation and validatoin setttings
  "TokenSettings": {
    "ExpiresAfter": "240.00:00:00",
    "MaxSessionsCount": 16,
    "NeedsRefreshEvery": "00:10:00",
    "TokenEntropyLength": 64
  }
}