{
  // Logging config
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Allowed Cross-Origin hosts
  "AllowedHosts": "*",

  // Database connection string
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=APSS;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  // Authentication config
  "AuthSettings": {
    "MaxSessionsCount": 4,
    "ConfirmationValidity": "00:30:00",
    "RefreshTokenValidity": "240.00:00:00"
  }
}