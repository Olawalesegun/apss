@model APSS.Web.Dtos.VoluntaryDto

<div class="card mt-2">
    <div class="card-body">
        <div class="d-flex "><h5>تأكيد حذف التطوع  </h5> </div>
        <table class="table user-view-table m-0  ">
            <tbody style="font-size:14px">
                <tr class="">
                    <th>@Html.DisplayNameFor(s=>s.Id)</th>
                    <td> @Model.Id</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(s=>s.Name)</th>
                    <td> @Model.Name</td>
                </tr>
                 <tr>
                    <th>@Html.DisplayNameFor(s=>s.Field)</th>
                    <td> @Model.Field</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(s=>s.Individual.Name)</th>
                    <td> @Model.Individual.Name</td>
                </tr>
                 <tr>
                    <th>@Html.DisplayNameFor(s=>s.CreatedAt)</th>
                    <td> @Model.CreatedAt</td>
                </tr>
                 <tr>
                    <th>@Html.DisplayNameFor(s=>s.ModifiedAt)</th>
                    <td> @Model.ModifiedAt</td>
                </tr>
            </tbody>
        </table>
        <br />
        <div class=" d-inline pt-2">
            <a class="btn btn-danger btn-rounded  " asp-route-id="@Model.Id" asp-controller="Voluntary" asp-action="DeleteVoluntary">تأكيد</a>
            <a class="btn btn-primary btn-rounded mx-3" asp-route-id="@Model.Individual.Id" asp-controller="Voluntary" asp-action="GetVoluntaries">رجوع</a>
        </div>
    </div>
</div>