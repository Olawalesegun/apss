@model APSS.Web.Dtos.VoluntaryDto 
<div class="container-fluid px-3 py-3 mx-4 my-1">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4> تحديث بيانات التطوع</h4>
        </div>
<form class=" mt-3 ">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class=" mb-4">
                
                    <div class="">
                        <span class="text-danger">*</span>
                        <label class="form-label" asp-for="Name"></label>
                        <input type="text" id="name_voluntary" asp-for="Name" value="@Model.Name"  class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="Name"></span>

               
                    <div class="mt-4">
                        <span class="text-danger" >*</span>
                        <label class="form-label" for="field_voluntary" asp-for="Field"></label>
                        <input type="number" id="field_voluntary" value="@Model.Field" asp-for="Field"  class="form-control" />
                    </div>
                    <span asp-validation-for="Field" class="text-danger"></span>
            </div>


            <!-- Submit button -->
  <div class="d-inline">
        <button class="btn btn-primary mt-4 mx-1" asp-controller="Voluntary" asp-action="UpdateVoluntary"> <i class="fa-solid fa-pen-to-square mx-2"></i><span>تحديث</span>  </button>
        <button class="btn btn-danger mt-4 mx-1" asp-controller="Voluntary" asp-action="GetVoluntaries" asp-route-Id="@Model.Individual.Id"><i class="fa-solid fa-share mx-2"></i><span>رجوع</span>  </button>
        </div> 
        </form>
        </div>
        </div>