@model APSS.Web.Dtos.VoluntaryDto

<div class="container-fluid px-3 py-3 mx-4 my-1">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4 style="border-bottom :2px darkgray solid;"> Add Voluntary</h4>
        </div>
        <form class=" mt-3 " method="post">

            <div class=" mb-4">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div >
                    <span class="text-danger">*</span>
                    <label class="form-label" asp-for="Name"></label>
                    <input type="text" id="name_voluntary"  asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>

                <div class=" mt-4">
                     <span class="text-danger">*</span>
                    <label class="form-label" for="field_voluntary" asp-for="Field"></label>
                    <input type="number" id="field_voluntary" asp-for="Field"  class="form-control" />
                </div>
                <span asp-validation-for="Field" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <div class="d-inline">
                <button class="btn btn-primary mt-4 mx-1" asp-controller="Voluntary" asp-action="AddVoluntary"> <i class="fa-solid fa-plus mx-2"></i><span>Add</span>  </button>
                <button class="btn btn-danger mt-4 mx-1" asp-controller="Voluntary" asp-action="GetVoluntaries" asp-route-Id="@Model.Individual.Id"><i class="fa-solid fa-share mx-2"></i><span>Cancel</span>  </button>
            </div>
        </form>
    </div>
</div>