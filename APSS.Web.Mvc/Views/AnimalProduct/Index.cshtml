@model IEnumerable<APSS.Web.Dtos.AnimalProductDto>
<partial name="_dataNavBar" />

<!--table-->

<div class="  p-2  col-ms-12  my-0 mt-2  rounded ml-2 " id="">

    <form class="row gx-3 gy-2 align-items-center mb-3 " asp-controller="AnimalProduct" asp-action="Index" method="post">
        <div class="col-sm-6">

            <div class=" mb-3 col-sm  d-flex">
                <div class="input-group">
                <button type="submit" class="btn btn-primary search-btn">
                    <i class="fas fa-search"></i>
                </button>
                <input type="search" id="form1" class="form-control" name="searchString" />
            </div>
            </div>
        </div>
        <div class="col-sm-2 col-lg-1 mb-3 ">

            <select class="form-select " id="searchby">
                <option selected>20</option>
                <option value="1">40</option>
                <option value="2">80</option>
                <option value="3">100</option>
            </select>
        </div>
        <div class="col-sm-2 mb-3">

            <select class="select form-select" data-mdb-filter="true" name="searchBy">
                <option selected>Search By</option>
                <option value="1">Name</option>
                <option value="2">Id</option>
                <option value="3">Quantity</option>
            </select>
        </div>
    </form>

    <div class="col-sm-12  ">
        @if (ViewBag.SearchResult != null)
        {
            <span class="text-danger">@ViewBag.SearchResult</span>
        }
        <div class=" mt-3 bg-light table-rsponsive mb-3  table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar ">

            <table class="table table-hover table-responsive table-bordered   table-striped mb-0 " id="myTable">

                <thead>
                    <tr class="header  bg-fixed " style="border-bottom:2px #5C5C5C solid;">
                        <th  class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.Id)</th>
                        <th  class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.Name)</th>
                        <th  class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.Quantity)</th>
                        <th  class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.CreatedAt)</th>
                        <th style="width:20px;" class=" text-capitalize align-middle"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-top">

                            <td class="text-break text-capitalize align-middle">@item.Id</td>
                            <td class="text-break text-capitalize align-middle"> @item.Name</td>
                            <td class="text-break text-capitalize align-middle">@item.Quantity</td>
                            <td class="text-break text-capitalize align-middle">
                                @item.CreatedAt
                            </td>
                            <td class="align-middle center">

                                <div class=" dropend">
                                    <a class="" role="button" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="dropdown-item" asp-controller="AnimalProduct" asp-action="AnimalProductDetails"><div class="d-flex justify-content-between"> <span>Details</span>  <span><i class="fa-solid fa-info"></i> </span> </div> </a></li>
                                        <li><a class="dropdown-item" asp-controller="AnimalProduct" asp-action="DeleteAnimalProduct"><div class="d-flex justify-content-between"> <span>Delete</span>  <span><i class="fa-solid fa-trash-can"></i> </span> </div></a></li>
                                        <li class="">
                                            <a class="dropdown-item" asp-controller="ProductExpense" asp-action="AddExpense">
                                                <div class="d-flex justify-content-between"> <span> Add Expense</span>  <span><i class="fa-solid fa-dollar-sign"></i> </span> </div>
                                            </a>
                                        </li>
                                        <li class="">
                                            <a class="dropdown-item " asp-controller="AnimalProduct" asp-action="EditAnimalProduct">
                                                <div class="d-flex justify-content-between"> <span>Edit </span>  <span><i class="fa-solid fa-pen-to-square"></i> </span> </div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex container justify-content-center">
        <div class=" col-sm-12 px-sm-2 col-lg-4 col-md-4">
            <ul class="pagination d-flex justify-content-between">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">6</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </div>
    </div>
</div>

@section scripts{
<script>

     $(document).ready(function(){
    $(".sidebar ul li.active").removeClass('active');
     $("#dataManagement").addClass('active');
    });

        $(document).ready(function(){
         $(".scrollmenu a.MediaActive").removeClass('MediaActive');
         $("#animalProductMedia").addClass('MediaActive')

     });

       $("#animalGroups").removeClass('actives');
       $("#lands").removeClass('actives');
       $("#landProducts").removeClass('actives');
        $("#confirmation").removeClass('actives');
        $("#units").removeClass('actives');
         $("#animalProducts").addClass('actives');
</script>
    }