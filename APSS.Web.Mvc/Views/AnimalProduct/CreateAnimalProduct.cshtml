@model APSS.Web.Dtos.AnimalProductDto

<div class="mx-4">
    <div class="col-sm-5">
        <form class="mt-3" id="ProductForm" method="post" asp-controller="AnimalProduct" asp-action="CreateAnimalProduct">
            <!-- 2 column puts for the National number and Phome Number-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex justify-content-center mb-4"><h4>اضافة منتج حيواني</h4></div>
            <div class="row mb-3">
                <div class="col">
                    <div class="">
                        <span class="text-danger">*</span>
                        <label class="form-label" asp-for="Name"></label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="">
                        <label class="form-label" asp-for="PeriodTaken"></label>
                        <input type="datetime" name="Period_Taken" asp-for="PeriodTaken" class="form-control" />
                        <span asp-validation-for="PeriodTaken" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class=" mb-3">
                <div class="">
                    <span class="text-danger">*</span>
                    <label asp-for="Quantity" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="Quantity" name="product_quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>
            <!-- selectinput for Unit -->
            <div class="mb-3">
                <span class="text-danger">*</span>
                <label asp-for="Unit" class="form-label"></label>
                <select class="form-select" asp-for="Unit" asp-items="@(new SelectList(Model.Unit,"Id","Name"))">
                    <option selected></option>
                </select>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>

            <!--  animal group Producer -->
            <input type="hidden" asp-for="ProducerId" />            <!-- Submit button -->
            <button type="submit" class="btn btn-primary    mb-4 mt-4">اضافة</button>
            <a onClick="history.go(-1); return false;" class="btn btn-link w-25 my-4 mx-3" style="background-color:#DCEEFB">الغاء</a>
            @*<a onClick="history.go(-1); return false;" class="btn btn-link w-25 my-4 mx-3" style="background-color:#DCEEFB">الغاء</a>*@
        </form>
    </div>
</div>

@section scripts{
<script type="text/javascript">
        function AddAnimalGroup() {
            var data = $("#ProductForm").serialize();
            console.log(data);
            $.ajax({
                type: 'GET',
                url: '/DataManagement/CreateAnimalProduct',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
                data: data,
                success: function (result) {
                   alert('Successfully received Data ');
                    console.log(result);
                },
                error: function () {
                   alert('Failed to receive the Data');
                    console.log('Failed ');
                }
            })
        }
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</script>
}