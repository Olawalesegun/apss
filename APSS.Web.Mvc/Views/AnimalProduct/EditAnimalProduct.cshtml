@model APSS.Web.Dtos.AnimalProductDto

<div class="container-fluid">
    <div class="col-sm-6">
        <form class=" mt-3 " method="post" asp-controller="AnimalProduct" asp-action="EditAnimalProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="d-flex justify-content-center mb-4"><h4 style="border-bottom:2px black solid;line-height:40px">تعديل المنتج حيواني</h4></div>

            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline">
                        <input type="text" asp-for="Name" class="form-control" />
                        <label class="form-label" asp-for="Name">Name</label>
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <input type="number" asp-for="PeriodTaken" class="form-control" />
                        <label class="form-label" asp-for="PeriodTaken"></label>
                    </div>
                    <span asp-validation-for="PeriodTaken" class="text-danger"></span>
                </div>
            </div>

            <div class=" mb-4">
                <div class="form-outline">
                    <input type="number" class="form-control" asp-for="Quantity" />
                    <label asp-for="Quantity" class="form-label"></label>
                </div>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- selectinput for Unit -->
            <div class="mb-4">
                <label asp-for="Unit" class="form-label"></label>
                <select class="form-select" asp-for="UnitId" asp-items="@(new SelectList(Model.Unit,"Id","Name"))">
                    <option selected>select Unit</option>
                </select>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary    mb-4 mt-4">تعديل</button>
        </form>
    </div>
</div>