@model APSS.Web.Dtos.AnimalProductDto

<div class="container-fluid">
    <div class="col-sm-12 col-lg-6 mx-lg-4 mx-sm-2">
        <form class=" mt-3 " method="post" asp-controller="AnimalProduct" asp-action="EditAnimalProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="d-flex justify-content-center mb-4"><h4>تعديل المنتج الحيواني</h4></div>

            <div class="row mb-2">
                <div class="col">
                    <div class="">
                        <label class="form-label" asp-for="Name">Name</label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="">
                        <label class="form-label" asp-for="PeriodTaken"></label>
                        <input type="number" asp-for="PeriodTaken" class="form-control" />
                        <span asp-validation-for="PeriodTaken" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class=" mb-2">
                <div class="">
                    <label asp-for="Quantity" class="form-label"></label>
                    <input type="number" class="form-control" asp-for="Quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <!-- selectinput for Unit -->
            <div class="mb-2">
                <label asp-for="Unit" class="form-label"></label>
                <select class="form-select" asp-for="UnitId" asp-items="@(new SelectList(Model.Unit,"Id","Name"))">
                    <option selected>select Unit</option>
                </select>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary  w-25  mb-4 mt-2">تعديل</button>
            <a onClick="history.go(-1); return false;" class="btn btn-link w-25 my-4 mx-3" style="background-color:#DCEEFB">الغاء</a>
        </form>
    </div>
</div>