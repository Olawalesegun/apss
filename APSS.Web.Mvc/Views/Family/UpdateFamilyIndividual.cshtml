@model APSS.Web.Dtos.FamilyIndividualDto

<div class="container-fluid px-3 py-3  mx-4 my-1">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4>Update Individual Of Family</h4>
        </div>
        <form class=" mt-3 " method="post">

            <!-- Text input for individual name-->
           <div class="input-group has-validation mb-3">
                <span class="input-group-text"><i class="fa-solid fa-people-roof"></i></span>
                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Family" value="@Model.Family.Name" asp-for="Family" >
                    <label asp-for="Family"></label>
                </div>
                <span  class="d-block invalid-feedback" asp-validation-for="Family"></span>
            </div>

            <!-- Text input for Address -->
            <div class="input-group has-validation mb-3">
                <span class="input-group-text"><i class="fa-solid fa-person"></i></span>
                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Name Individual" value="@Model.Individual.Name" asp-for="Individual" >
                    <label asp-for="Individual"></label>
                </div>
                <span  class="d-block invalid-feedback" asp-validation-for="Individual"></span>
            </div>
             <div class="form-check flex-grow-1">
                    <input class="form-check-input" type="checkbox"  asp-for="IsProvider" value="@Model.IsProvider">
                    <label class="form-check-label" asp-for="IsProvider"> </label>
                </div>            
                 <div class="form-check flex-grow-1">
                    <input class="form-check-input" type="checkbox"  asp-for="IsParent" value="@Model.IsParent">
                    <label class="form-check-label" asp-for="IsParent"> </label>
                </div> 
            <!-- Submit button -->
            <div class="d-inline">
                <button class="btn btn-primary mt-4 mx-1" asp-controller="Family" asp-action="UpdateFamilyIndividual"> 
                    <i class="fa-solid fa-pen-to-square fa-lg mx-2"></i><span>Edit</span> 
                </button>
            <a onClick="history.go(-1); return false;" class="btn btn-link w-25 my-4 mx-3" style="background-color:#DCEEFB">Cancel</a>

            </div>
        </form>
    </div>
</div>
