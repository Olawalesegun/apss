@model FamilyDto

<div class="container-fluid px-3 py-3 mx-4 my-1">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4 > Update Family </h4>
        </div>

        <form class=" mt-3 " method="post">

            <div class="input-group has-validation mb-3">
                <span class="input-group-text"><i class="fa-solid fa-people-roof"></i></span>
                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Name" asp-for="Name" pattern="^[a-zA-Z''\s]{1,}$" value="@Model.Name" >
                    <label asp-for="Name"></label>
                </div>
                <span  class="d-block invalid-feedback" asp-validation-for="Name"></span>
            </div>
             <div class="input-group has-validation mb-3">
                <span class="input-group-text"><i class="fa-solid fa-house-chimney"></i></span>
                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Address" value="@Model.LivingLocation" asp-for="LivingLocation" >
                    <label asp-for="LivingLocation"></label>
                </div>
                <span  class="d-block invalid-feedback" asp-validation-for="LivingLocation"></span>
            </div>
            <!-- Submit button -->
            <div class="d-inline">
                <button class="btn btn-primary mt-4 mx-1" asp-controller="Family" asp-action="UpdateFamily"> <i class="fa-solid fa-pen-to-square mx-2 fa-lg"></i><span>Edit</span>  </button>
            <a onClick="history.go(-1); return false;" class="btn btn-link w-25 my-4 mx-3" style="background-color:#DCEEFB">Cancel</a>
            </div>
        </form>
    </div>
</div>

