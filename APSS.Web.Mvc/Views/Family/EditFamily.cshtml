@model APSS.Web.Dtos.FamilyDto

<div class="container-fluid px-3 py-3 mx-4 my-1">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4 >تحديث بيانات العائلة</h4>
        </div>

        <form class=" mt-3 " method="post">

            <div class=" mb-4">
                <div class="">
                    <span class="text-danger">*</span>
                    <label class="form-label" asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
                <div class="mt-4">
                    <span class="text-danger">*</span>
                    <label class="form-label" asp-for="LivingLocation"> </label>
                    <input type="text" asp-for="LivingLocation" class="form-control" />
                    <span asp-validation-for="LivingLocation" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit button -->
            <div class="d-inline">
                <button class="btn btn-primary mt-4 mx-1" asp-controller="Family" asp-action="UpdateFamily"> <i class="fa-solid fa-pen-to-square mx-2 fa-lg"></i><span>تحديث</span>  </button>
                <button class="btn btn-danger mt-4 mx-1" asp-controller="Family" asp-action="GetFamilies"><i class="fa-solid fa-share mx-2 fa-lg"></i><span>رجوع</span>  </button>
            </div>
        </form>
    </div>
</div>

