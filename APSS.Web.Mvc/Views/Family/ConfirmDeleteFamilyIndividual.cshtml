@model APSS.Web.Dtos.FamilyIndividualDto

<div class="card mt-2">
    <div class="card-body">
        <div class="d-flex "><h5>تأكيد حذف فرد من العائلة</h5> </div>
        <table class="table user-view-table m-0  ">
            <tbody style="font-size:14px">
                <tr class="">
                    <th>@Html.DisplayNameFor(f=>f.Id)</th>
                    <td> @Model.Id</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(f=>f.Family.Name)</th>
                    <td> @Model.Family.Name</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(f=>f.Individual.Name)</th>
                    <td> @Model.Individual.Name</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(f=>f.IsParent)</th>
                    <td> @Model.IsParent</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(f=>f.IsProvider)</th>
                    <td> @Model.IsProvider</td>
                </tr>
            </tbody>
        </table>
        <br />
        <div class=" d-inline pt-2">
            <a class="btn btn-danger btn-rounded  " asp-route-Id="@Model.Id" asp-controller="Family" asp-action="DeleteFamilyIndividual">تأكيد</a>
            <a class="btn btn-primary btn-rounded mx-3" asp-controller="Family" asp-action="GetFamilies">رجوع</a>
        </div>

        @*<a class="btn text-primary shadow-0 btn-link text-decoration-none" style="font-size:18px"><span class=""><i class="fa-solid fa-angles-left"></i></span> التكلفة </a>*@
    </div>
</div>