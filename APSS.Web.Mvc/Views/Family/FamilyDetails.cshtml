@model APSS.Web.Dtos.FamilyDto
    @await Html.PartialAsync("_PupolationNavBar")

<div class="card mt-2">
    <div class="d-inline">
    </div>
    <div class="card-body">
        <div class="d-flex ">

            <i class="fa-solid fa-caret-left fs-1 " style="padding-left:3px"></i> <h3>Family Information </h3>
        </div>
        <table class="table user-view-table m-0 t ">
            <tbody>
                <tr class="">
                    <td class="label"><label>@Html.DisplayNameFor(m => m.Id)</label></td>
                    <td>@Model.Id </td>
                </tr>
                <tr>
                    <td> <label>@Html.DisplayNameFor(m => m.Name);</label></td>
                    <td>@Model.Name  </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.LivingLocation)</label>  </td>
                    <td> @Model.LivingLocation </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.User)</label>  </td>
                    <td> @Model.User.Name </td>
                </tr>
                
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.CreatedAt)</label>  </td>
                    <td>
                        @Model.CreatedAt
                    </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.ModifiedAt)</label>  </td>
                    <td>
                        @Model.ModifiedAt
                    </td>
                </tr>
                <tr></tr>
            </tbody>
        </table>
        <br />
        <div cllass="d-inline pt-2">
            <a class="btn btn-outline-dark mx-1 my-2" onclick="history.go(-1)"> <i class="fa-solid fa-arrow-right mx-2"> </i><span>Back</span> </a>
            <a class="btn btn-outline-primary    mx-1 pr-1 my-2 " asp-route-id="@Model.Id" asp-controller="Individual" asp-action="AddIndividual"> <i class="fa-solid fa-plus mx-1 "> </i><span> Add Individual</span> </a>
            <a class="btn btn-outline-primary    mx-1 pr-1 my-2 " asp-route-id="@Model.Id" asp-controller="Family" asp-action="UpdateFamily"> <i class="fa-solid fa-pen-to-square mx-1 "> </i><span>Edit</span> </a>
            <a class="btn  btn-outline-danger   mx-1 my-2 " asp-controller="Family" asp-action="ConfirmDeleteFamily" asp-route-Id="@Model.Id"> <i class="fa-solid fa-trash-can mx-1"></i><span>Delete</span>  </a>
            <a id="III" class="btn btn-outline-dark   my-2   text-decoration-none mx-1" asp-route-id="@Model.Id" asp-controller="Family" asp-action="GetFamilyIndividuals"><span class="">Individuals </span> </a>
        </div>
    </div>
</div>

@section scripts{
<script>
          $(document).ready(function() {
            $(".sidebar ul li.active").removeClass('active');
            $("#populationManagement").addClass('active');
        });
        document.getElementById("nav-system-name").innerHTML = "Populatoin Management";
        document.getElementById("media-system-name").innerHTML = "Populatoin Management";

        $("#family").AddClass('actives');
        $("#individual").removeClass('actives');
</script>
    }