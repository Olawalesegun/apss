@model APSS.Web.Dtos.FamilyDto
@{
    ViewData["Title"] = "Family Details";
}


<div class="card mt-2">
    <div class="d-inline">
    </div>
    <div class="card-body">
        <div class="d-flex ">

            <i class="fa-solid fa-caret-left fs-1 " style="padding-left:3px"></i> <h3>معلومات العائلة</h3>
        </div>
        <table class="table user-view-table m-0 t ">
            <tbody>
                <tr class="">
                    <td> @Html.DisplayNameFor(f=>f.Id)</td>
                    <td> @Model.Id </td>
                </tr>
                <tr class="">
                    <td> @Html.DisplayNameFor(f=>f.Name)</td>
                    <td> @Model.Name </td>
                </tr>
                <tr>
                    <td> @Html.DisplayNameFor(f=>f.LivingLocation)</td>
                    <td>@Model.LivingLocation </td>
                </tr>
                 <tr>
                    <td> @Html.DisplayNameFor(f=>f.CreatedAt)</td>
                    <td>@Model.CreatedAt </td>
                </tr>
                  <tr>
                    <td> @Html.DisplayNameFor(f=>f.ModifiedAt) </td>
                    <td>@Model.ModifiedAt </td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(f=>f.User)   </td>
                    <td> @Model.User.Name</td>
                </tr>

            </tbody>
        </table>
        <br />
        <div cllass="d-inline pt-2">
            <a class="btn btn-primary-danger btn-rounded  text-primary mx-1 pr-1 my-2 " asp-controller="Family" asp-action="UpdateFamily" asp-route-Id="@Model.Id"> <i class="fa-solid fa-pen-to-square mx-1 "> </i><span>Edit</span> </a>
            <a class="btn  btn-primary-danger btn-rounded text-primary mx-1 my-2 " asp-controller="Individual" asp-action="AddIndividual" asp-route-Id="@Model.Id"> <i class="fa-solid fa-person-circle-plus mx-1 lg"></i><span> Add Individual</span>  </a>
            <a class="btn  btn-link-danger btn-rounded text-danger mx-1 my-2 " asp-controller="Family" asp-action="ConfirmDeleteFamily" asp-route-Id="@Model.Id"> <i class="fa-solid fa-trash-can mx-1"></i><span>Delete</span>  </a>
            <a  class="btn btn-primary-danger btn-rounded  my-2 bg-white text-dark text-decoration-none mx-1" asp-controller="Family" asp-action="GetFamilyIndividuals"asp-route-Id="@Model.Id"><i class="fa-solid fa-people-roof mx-1 lg"></i><span class="">Individuals </span> </a>
            <a  class="btn btn-primary-danger btn-rounded  my-2 bg-white text-dark text-decoration-none mx-1 " asp-controller="Family" asp-action="GetFamilies"><i class="fa-solid fa-angle-right px-1"></i><span class="">Cancel </span> </a>
        </div>
    </div>
</div>
