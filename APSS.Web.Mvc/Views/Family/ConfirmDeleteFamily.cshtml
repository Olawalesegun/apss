@model APSS.Web.Dtos.FamilyDto

<div class="card mt-2">
    <div class="card-body">
        <div class="d-flex "><h5> Confirm Delete of Family </h5> </div>
        <table class="table user-view-table m-0  ">
            <tbody style="font-size:14px">
                <tr class="">
                    <th>@Html.DisplayNameFor(f=>f.Id)</th>
                    <td> @Model.Id</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(f=>f.Name)</th>
                    <td> @Model.Name</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(f=>f.LivingLocation)</th>
                    <td> @Model.LivingLocation</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(f=>f.CreatedAt)</th>
                    <td> @Model.CreatedAt</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(m=>m.ModifiedAt)</th>
                    <td> @Model.ModifiedAt</td>
                </tr>
            </tbody>
        </table>
        <br />
        <div class=" d-inline pt-2">
            <a class="btn btn-danger btn-rounded  " asp-route-Id="@Model.Id" asp-controller="Family" asp-action="DeleteFamily">Confirm</a>
            <a class="btn btn-primary btn-rounded mx-3" asp-controller="Family" asp-action="GetFamilies">Cancel</a>
        </div>
    </div>
</div>