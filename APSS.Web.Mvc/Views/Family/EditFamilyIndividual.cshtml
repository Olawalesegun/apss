@model APSS.Web.Dtos.FamilyIndividualDto


<div class="container-fluid px-3 py-3 mx-4 my-1">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4 >تحديث بيانات أفراد العائلة </h4>
        </div>
        <form class=" mt-3 ">
            <div class=" mb-4">
                <div class="">
                    <span class="text-danger">*</span>
                    <label class="form-label" asp-for="Family"></label>
                    <input type="text" id="family_name" asp-for="Family" class="form-control" />
                </div>
                <span asp-validation-for="Family" class="text-danger"></span>

                <div class=" mt-4">
                    <span class="text-danger">*</span>
                    <label class="form-label" asp-for="Individual"> </label>
                    <input type="text" id="Individual_name" asp-for="Individual" name="Individual_name" class="form-control" />
                </div>
                <span asp-validation-for="Individual" class="text-danger"></span>

                <div class="form-check">
                    <label class="form-check-label" asp-for="IsProvider">
                    </label>
                    <input class="form-check-input" type="checkbox" asp-for="IsProvider" value="">
                </div>
                <span asp-validation-for="IsProvider" class="text-danger"></span>
                <div class="form-check">
                    <label class="form-check-label" asp-for="IsParent">
                    </label>
                    <input class="form-check-input" asp-for="IsParent" type="checkbox" value="" id="flexCheckChecked">
                </div>
                <span asp-validation-for="IsParent" class="text-danger"></span>
            </div>
            <div class="d-inline">
                <button class="btn btn-primary mt-4 mx-1" asp-controller="Family" asp-action="UpdateFamilyIndividual"> <i class="fa-solid fa-pen-to-square mx-2 fa-lg"></i><span>تحديث</span>  </button>
                <button class="btn btn-danger mt-4 mx-1" asp-controller="Family" asp-action="GetFamilies"><i class="fa-solid fa-share mx-2"></i><span>رجوع</span>  </button>
            </div>
        </form>
    </div>
</div>

