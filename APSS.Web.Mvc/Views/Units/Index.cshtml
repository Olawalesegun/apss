@model IEnumerable<APSS.Web.Dtos.AnimalProductUnitDto>
<partial name="_dataNavBar" />

<div class="  p-2  col-ms-12  my-0 mt-2  rounded ml-2 " id="">

    <form class="row gx-3 gy-2 align-items-center mb-3 ">
        <div class="col-sm-6">

            <div class=" mb-3 col-sm  d-flex">
                <button type="button" class="btn btn-primary search-btn">
                    <i class="fas fa-search"></i>
                </button>
                <input type="search" id="form1" class="form-control" />
            </div>
        </div>
        <div class="col-sm-2 col-lg-1 mb-2 ">

            <select class="form-select " id="searchby">
                <option selected>20</option>
                <option value="1">40</option>
                <option value="2">80</option>
                <option value="3">100</option>
            </select>
        </div>
        <div class="col-sm-2 mb-3">

            <select class="select form-select" data-mdb-filter="true">
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
                <option value="4">Four</option>
                <option value="5">Five</option>
                <option value="6">Six</option>
                <option value="7">Seven</option>
                <option value="8">Eight</option>
                <option value="9">Nine</option>
                <option value="10">Ten</option>
            </select>
        </div>
    </form>

    <div class="col-sm-12  ">

        <div class=" mt-3 bg-light table-rsponsive mb-3 table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar ">

            <table class="table table-hover table-responsive table-bordered h-100  table-striped mb-0 " style="height:400px" id="myTable">

                <thead>
                    <tr class="header  bg-fixed " style="border-bottom:2px #5C5C5C solid;">
                        <th style="width:8%;" class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.Id)</th>
                        <th style="width:30%;" class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.Name)</th>
                        <th style="width:30%;" class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.CreatedAt)</th>
                        <th style="width:30%;" class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.ModifiedAt)</th>
                        <th style="width:0%;" class=" text-capitalize align-middle">الخيارات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-top">

                            <td class="text-break text-capitalize align-middle">@item.Id</td>
                            <td class="text-break text-capitalize align-middle"> @item.Name</td>

                            <td class="text-break text-capitalize align-middle">
                                @item.CreatedAt
                            </td>
                            <td class="text-break text-capitalize align-middle">
                                @item.ModifiedAt
                            </td>
                            <td class="align-middle center">

                                <div class=" dropend">
                                    <a class="" role="button" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="dropdown-item" asp-controller="Units" asp-action="DeleteUnit"><div class="d-flex justify-content-between"> <span>حذف</span>  <span><i class="fa-solid fa-trash-can"></i> </span> </div></a></li>
                                        <li class="">
                                            <a class="dropdown-item " asp-controller="Units" asp-action="EditUnit">
                                                <div class="d-flex justify-content-between"> <span>تعدل </span>  <span><i class="fa-solid fa-pen-to-square"></i> </span> </div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex container justify-content-center">
        <div class=" col-sm-12 px-sm-2 col-lg-4 col-md-4">
            <ul class="pagination d-flex justify-content-between">
                <li class="page-item"><a class="page-link" href="#">السابق</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">6</a></li>
                <li class="page-item"><a class="page-link" href="#">التالي</a></li>
            </ul>
        </div>
    </div>
</div>

@section scripts{
<script>

     $(document).ready(function(){
    $(".sidebar ul li.active").removeClass('active');
     $("#dataManagement").addClass('active');
    });

        $(document).ready(function(){
         $(".scrollmenu a.MediaActive").removeClass('MediaActive');
         $("#animalProductMedia").addClass('MediaActive')

     });

       $("#animalGroups").removeClass('actives');
       $("#lands").removeClass('actives');
       $("#landProducts").removeClass('actives');
       $("#confirmation").removeClass('actives');
         $("#animalProducts").removeClass('actives');
         $("#units").addClass('actives');
</script>
    }