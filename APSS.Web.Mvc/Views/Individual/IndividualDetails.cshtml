@model APSS.Web.Dtos.IndividualDto
@{
    ViewData["Title"] = " Information Individual  ";
}

<div class="card mt-2">
    <div class="card-body">
        <div class="d-flex "> <i class="fa-solid fa-caret-left fs-1 " style="padding-left:4px"></i> <h3>معلومات الشخص</h3></div>

        <table class="table user-view-table m-0 t ">
            <tbody style="font-size:14px">
                  <tr class="">
                    <td>@Html.DisplayNameFor(i=>i.Id) </td>
                    <td> @Model.Id</td>
                </tr>
                <tr class="">
                    <td>@Html.DisplayNameFor(i=>i.Name) </td>
                    <td> @Model.Name</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(i=>i.Job) </td>
                    <td>@Model.Job</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(i=>i.Address)   </td>
                    <td> @Model.Address</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(i=>i.NationalId)</td>
                    <td>@Model.NationalId</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(i=>i.Family)  </td>
                    <td>@Model.Family </td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(i=>i.PhonNumber)   </td>
                    <td>@Model.PhonNumber</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(i=>i.Sex)   </td>
                    <td>@Model.Sex</td>
                </tr>
                <tr>
                    <td> @Html.DisplayNameFor(i=>i.SocialStatus)  </td>
                    <td>@Model.SocialStatus  </td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(i=>i.User)   </td>
                    <td><span class="">@Model.User </span></td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(i=>i.CreatedAt) </td>
                    <td><span class="">@Model.CreatedAt  </span></td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(i=>i.ModifiedAt)   </td>
                    <td><span class="">@Model.ModifiedAt </span></td>
                </tr>
              
            </tbody>
        </table>
        
         <div cllass="d-inline pt-2">
            <a class="btn btn-primary-danger btn-rounded  text-primary mx-1 pr-1 my-2 " asp-controller="Individual" asp-action="UpdateIndividual" asp-route-Id="@Model.Id"> <i class="fa-solid fa-pen-to-square mx-1 "> </i><span>Edit</span> </a>
            <a class="btn  btn-link-danger btn-rounded text-danger mx-1 my-2 " asp-controller="Individual" asp-action="ConfirmDeleteIndividual" asp-route-Id="@Model.Id"> <i class="fa-solid fa-trash-can mx-1"></i><span>Delete</span>  </a>
            <a  class="btn btn-primary-danger btn-rounded  my-2 bg-white text-dark text-decoration-none mx-1" asp-controller="Skill" asp-action="GetSkills"asp-route-Id="@Model.Id"><i class="fa-solid fa-angle-down mx-1 lg"></i><span class="">Skills </span> </a>
            <a  class="btn btn-primary-danger btn-rounded  my-2 bg-white text-dark text-decoration-none mx-1" asp-controller="Voluntary" asp-action="GetVoluntaries"asp-route-Id="@Model.Id"><i class="fa-solid fa-angle-down mx-1 lg"></i><span class="">Voluntary </span> </a>
            <a  class="btn btn-primary-danger btn-rounded  my-2 bg-white text-dark text-decoration-none mx-1 " asp-controller="Individual" asp-action="GetIndividuals"><i class="fa-solid fa-share px-1"></i><span class="">Cancel </span> </a>
        </div>
    </div>
    <hr class="border-light m-0">
</div>