@model APSS.Web.Dtos.IndividualDto

<div class="container-fluid px-3 py-3  mx-4 my-1">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4>تحديث بيانات الفرد</h4>
        </div>
        <form class=" mt-3 ">

            <!-- Text input for individual name-->
            <div class=" mb-4">
                <span class="text-danger">*</span>
                <label class="form-label" asp-for="Name"></label>
                <input type="text" id="individual_name" asp-for="Name" value="@Model.Name" name="individual_name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>

            <!-- Text input for Address -->
            <div class=" mb-4">
                <span class="text-danger">*</span>
                <label class="form-label" asp-for="Address">Address</label>
                <input type="text" id="individual_Address" asp-for="Address" value="@Model.Address" name="individual_Address" class="form-control" />
            </div>
            <span asp-validation-for="Address"></span>

            <!-- Text input for job -->
            <div class=" mb-4">
                <label class="form-label" asp-for="Job"></label>
                <input type="text" id="individual_job" asp-for="Job" value="@Model.Job" class="form-control" />
            </div>

            <!-- Text input for phonenumber -->
            <div class=" mb-4">
                <label class="form-label" asp-for="PhonNumber"></label>
                <input type="tel" id="individual_phone" asp-for="PhonNumber" value="@Model.PhonNumber" class="form-control" />
            </div>

            <!-- Text input for NationalId -->
            <div class=" mb-4">
                <label class="form-label" asp-for="NationalId"></label>
                <input type="number" id="individual_NationalId" asp-for="NationalId" value="@Model.NationalId" class="form-control" />
            </div>


            <!-- Text input for DateOfBirth -->
            <div class=" datepicker input-group.date-p mb-2">
                <label class="form-label" asp-for="DateOfBirth"></label>
                <input type="date" id="sandbox-container-p" asp-for="DateOfBirth" value="@Model.DateOfBirth" class="form-control" />
            </div>

            <!-- Gender input -->
            <div class="form-check-inline mb-2">

                <h5 class="inline">Gender:</h5>
            </div>
            <div class="form-check form-check-inline ">

                <input class="form-check-input hiden" asp-for="Sex"  type="radio" id="female" value="" />
                <label class="form-check-label" asp-for="Sex"></label>
            </div>

            <div class="form-check form-check-inline ">
                <input class="form-check-input" type="radio" asp-for="Sex" id="male" name="individual_gender" />
                <label class="form-check-label" asp-for="Sex"> </label>
            </div>
            <span asp-validation-for="Sex" class="text-danger"></span>

            <!-- Social Status input -->
            <div class="form-check-inline mb-2">
                <label asp-for="SocialStatus"></label>
            </div>
            <select asp-for="SocialStatus"
                    asp-items="Html.GetEnumSelectList<SocialStatus>()">
            </select>


            <!-- Submit button -->
            <div class="d-inline">
                <button class="btn btn-primary mt-4 mx-1" asp-controller="Individual" asp-action="UpdateIndividual"> 
                    <i class="fa-solid fa-pen-to-square fa-lg mx-2"></i><span>تحديث</span> 
                    </button>
                <button class="btn btn-danger mt-4 mx-1" asp-controller="Individual" asp-action="GetIndividuals">
                    <i class="fa-solid fa-share mx-2"></i><span>رجوع</span>\
                    </button>
            </div>
        </form>
    </div>
</div>
