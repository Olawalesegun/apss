<div class="offcanvas offcanvas-start" id="survey" style="background-color:#F3F4F4 !important">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Add New Survey</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <form class=" mt-3 ">
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    Survey
                </h3>
            </div>
            <!-- survey Name -->
            <div class=" mb-4 ">
                <label class="form-label" for="Survey_Name">Survey Name</label>
                <input type="tel" id="Survey_Name" name="Survey_Name" class="form-control" />
            </div>
            <!-- post and end survey date -->
            <div class="row mb-4">
                <div class="col">
                    <div class=" datepicker input-group.date">
                        <label class="form-label" for="post_date">Post Date</label>
                        <input type="date" id="sandbox-container " name="post_date" class="form-control" />
                    </div>
                </div>
                <div class="col">
                    <div class=" datepicker input-group.date-p mb-2">
                        <label class="form-label" for="end_date">End Date</label>
                        <input type="date" id="sandbox-container-p" name="end_date" class="form-control" />
                    </div>
                </div>
            </div>
            <!-- Text input survey description-->
            <div class=" mb-4">
                <label class="form-label" for="eduction_level">Description</label>
                <textarea type="text" id="eduction_level" name="eduction_level" class="form-control"></textarea>
            </div>
            <!-- specify survey post place-->
            <div class="  ">
                <h6 class="lh-1 border-bottom border-dark w-25 pb-1">Target Plase</h6>
            </div>
            <div class="row">
                <div class="col mb-4">
                    <div class="">
                        <label for=" city" class="form-label">City</label>
                        <select class="form-select " aria-label="Default select ">
                            <option selected>select City</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                </div>
                <div class="col">
                    <div class="">
                        <label class="form-label" for=" Directorat"> Directorat</label>
                        <select class="form-select " aria-label="Default select example">
                            <option selected>select </option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class=" mb-4">
                <label class="form-label" for="">Village</label>
                <select class="form-select  " aria-label="Default select example">
                    <option selected>select </option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
            </div>          <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block w-100 mb-4 mt-4">Add</button>
        </form>
    </div>
</div>
<div class="container-fluid mt-3">
    <a class="text-dark fw-bold text-decoration-none" role="button" data-bs-toggle="offcanvas" data-bs-target="#survey">
        <i class="fa-solid fa-plus"></i>     Add New Survey
    </a>
</div>