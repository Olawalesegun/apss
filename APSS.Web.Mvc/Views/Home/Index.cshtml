@model APSS.Web.Mvc.Models.AnimalGroup
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="offcanvas offcanvas-end" id="account" style="background-color:#F3F4F4 !important">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Add New Account </h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <partial name="_create" />
    </div>
</div>
<div class="container-fluid mt-3">
    <a class="text-dark fw-bold text-decoration-none" role="button" data-bs-toggle="offcanvas" data-bs-target="#account">
        <i class="fa-solid fa-plus"></i> Add Account
    </a>
</div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
</button>

<div>@Model.Id</div>
<div>@Model.Type</div>
<div>@Model.Sex</div>
<div>@Model.Quantity</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <partial name="_create" ,model="@Model" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<form class=" mt-3 " method="post" asp-action="Privacy">
    <!-- 2 column puts for the National number and Phome Number-->
    <div class="center d-flex justify-content-center mb-3 ">
        <h3 class="text-decoration-underline">
            Required Information
        </h3>
    </div>
    <!-- Text input for account name-->
    <div class="form-outline mb-4">
        <input type="tel" value="@Model.Type" asp-for="Type" class="form-control" />
        <label class="form-label" for="account-name">Name</label>
    </div>
    <!-- Text input for AccessLevel -->
    <div class="form-outline mb-4">
        <input type="text" id="account-passwor" asp-for="Quantity" value="@Model.Quantity" name="account-password" class="form-control" />
        <label class="form-label" for="account-password">Password</label>
    </div>
    <!-- account Permission -->
    <div class="form-check-inline">
        <h5 class="inline">Permission:</h5>
    </div>
    <!--read Permission -->
    <div class="form-check form-check-inline">
        <input class="form-check-input hiden" type="checkbox" name="read" id="read" value="read" checked />
        <label class="form-check-label" for="read">Read</label>
    </div>
    <!--write Permission -->
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" value="write" id="write" name="gender" />
        <label class="form-check-label" for="write"> Write </label>
    </div>
    <!--update Permission -->
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" value="update" id="update" name="update" />
        <label class="form-check-label" for="update"> Update </label>
    </div>            <!--delete Permission -->
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" value="delete" id="delete" name="delete" />
        <label class="form-check-label" for="delete"> Delete </label>
    </div>
    <!--full Permission -->
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" value="full" id="full" name="full" />
        <label class="form-check-label" for="full"> Full </label>
    </div>
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary w-100 mb-4 mt-4">Add</button>
</form>

