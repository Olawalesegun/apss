<div class="offcanvas offcanvas-start" id="season">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Add New Season</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">

        <form class=" mt-3 ">
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    Required Season Information
                </h3>
            </div>
            <!-- survey Name -->
            <div class="form-outline mb-4 ">
                <input type="tel" id="season" name="season" class="form-control" />
                <label class="form-label" for="season">Season Name</label>
            </div>
            <!-- post and end survey date -->
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline datepicker input-group.date">
                        <input type="date" id="sandbox-container " name="start_date" class="form-control" />
                        <label class="form-label" for="start_date">Season Start Date</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline datepicker input-group.date-p mb-2">
                        <input type="date" id="sandbox-container-p" name="end_date" class="form-control" />
                        <label class="form-label" for="end_date">Season End Date</label>
                    </div>
                </div>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4 mt-4">Add</button>
        </form>
    </div>
</div>
<div class="container-fluid mt-3">
    <a class="text-dark fw-bold text-decoration-none" role="button"  data-bs-toggle="offcanvas" data-bs-target="#season">
        <i class="fa-solid fa-plus"></i>     Add Season
    </a>
</div>