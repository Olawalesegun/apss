<div class="offcanvas offcanvas-start" id="account">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Add Additional Account Information</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">

        <form class=" mt-3 ">
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    Account name
                </h3>
            </div>
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline">
                        <input type="number" id="national_number" name="national_number" class="form-control" />
                        <label class="form-label" for="national_number">National number</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <input type="number" id="age" name="age" class="form-control" />
                        <label class="form-label" for="age">Age</label>
                    </div>
                </div>
            </div>

            <div class="form-outline mb-4">
                <input type="tel" id="Phone_Number" name="Phone_Number" class="form-control" />
                <label class="form-label" for="Phone_Number">Phone Number</label>
            </div>
            <!-- Text input for Education Level-->
            <div class="form-outline mb-4">
                <input type="text" id="eduction_level" name="eduction_level" class="form-control" />
                <label class="form-label" for="eduction_level">Education Level</label>
            </div>

            <!-- Text input address-->
            <div class="form-outline mb-4">
                <input type="text" id="address" class="form-control" />
                <label class="form-label" for="address">Address</label>
            </div>

            <!-- Gender input -->
            <div class="form-check-inline">

                <h5 class="inline">Gender:</h5>
            </div>
            <div class="form-check form-check-inline">

                <input class="form-check-input hiden" type="radio" name="gender" id="female" value="female" checked />
                <label class="form-check-label" for="female">Female</label>
            </div>

            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" value="" id="male" name="gender" />
                <label class="form-check-label" for="male"> Male </label>
            </div>

            <div class="form-check form-check-inline">

                <input class="form-check-input" type="radio" value="other" id="other" name="gender" />
                <label class="form-check-label" for="other"> Other </label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4 mt-4">Add</button>
        </form>
    </div>
</div>

<div class="container-fluid mt-3">

    <a class="text-dark fw-bold" role="button" type="button" data-bs-toggle="offcanvas" data-bs-target="#account">
        Add Account Info
    </a>
</div>