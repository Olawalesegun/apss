<div class="offcanvas offcanvas-start" id="account">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Add Additional Account Information</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <form class=" mt-3 ">
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class="text-decoration-underline">
                    Enter All Required Info
                </h3>
            </div>
            <!-- Text input for user name-->
            <div class=" mb-4">
                <label class="form-label" for="user_name">Name</label>
                <input type="tel" id="user_name" name="user_name" class="form-control" />
            </div>
            <!-- Text input for AccessLevel -->
            <div class=" mb-4">
                <label class="form-label" for="user_accesslevel">AccessLevel</label>
                <input type="text" id="user_accesslevel" name="user_accesslevel" class="form-control" />
            </div>            <!-- user status input -->
            <div class="form-check-inline">
                <h5 class="inline">Gender:</h5>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input hiden" type="radio" name="gender" id="female" value="female" checked />
                <label class="form-check-label" for="female">Active</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" value="" id="male" name="gender" />
                <label class="form-check-label" for="male"> Unactive </label>div>            <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4 mt-4">Add</button>
        </form>div>
    </div>
    <div class="container-fluid mt-3">
        <a class="text-dark fw-bold text-decoration-none" role="button" type="button" data-bs-toggle="offcanvas" data-bs-target="#account">
            <i class="fa-solid fa-plus"></i>    Add Account Info
        </a>
    </div>