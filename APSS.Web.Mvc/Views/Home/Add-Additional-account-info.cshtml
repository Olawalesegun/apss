<div class="offcanvas offcanvas-start" id="account_info">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Animal Group Add</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">

        <form class=" mt-3 " method="post" asp-action="" asp-controller="">
            <!-- 2 column puts for the type  and quantity of animal-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    Additional Account Information
                </h3>
            </div>
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline">
                        <input type="text" id="national_numaber" name="national_numaber" class="form-control" />
                        <label class="form-label" for="national_numaber">National Numaber</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <input type="number" id="phone_number" name="phone_number" class="form-control" />
                        <label class="form-label" for="phone_number">phone_number</label>
                    </div>
                </div>
            </div>

            <div class="form-outline">
                <input type="number" id="job" name="job" class="form-control" />
                <label class="form-label" for="job">Job</label>
            </div>
            <!-- Social Status -->
            <div class="mt-4">

                <select class="form-select " aria-label="Default select ">
                    <option selected>Social Status</option>
                    <option value="Married">Married</option>
                    <option value="Unmarried">Unmarried</option>
                    <option value="Divorced">Divorced</option>
                    <option value="Widowed">Widowed</option>
                    <option value="Unspecified">Unspecified</option>
                </select>
            </div>

            <!--account Status-->
            <div class="mt-4">
                <div class="form-check-inline">

                    <h5 class="inline">Account state:</h5>
                </div>
                <div class="form-check form-check-inline">

                    <input class="form-check-input hiden" type="radio" name="accountStatus" id="accountStatus" value="true" />               <label class="form-check-label" for="accountStatus">Active</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="false" id="accountStatus" name="accountStatus" />
                    <label class="form-check-label" for="accountStatus"> UnActive </label>
                </div>
            </div>
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4 mt-4">Add</button>
        </form>
    </div>
</div>
<div class="container-fluid mt-3">
    <a class="text-dark fw-bold text-decoration-none overflow-x-scroll " role="button" data-bs-toggle="offcanvas" data-bs-target="#account_info">
        <i class="fa-solid fa-plus"></i>
        Add Additional account info
    </a>
</div>