@using APSS.Web.Dtos
@model APSS.Web.Dtos.MultipleChoiceQuestionDto
<div class="container-fluid  mt-3    ">
    <div class="row d-flex ">
        <div class="col-xl-7  col-md-9 col-12 border rounded shadow-sm  p-2">
            <div class="d-flex  justify-content-center pb-4 pt-4">
                <div class=""> <h3 class="text-decoration-underline ">إضافة سؤال </h3></div>
            </div>
            <form class="" method="post" asp-action="AddQuestion">

                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="row d-flex justify-content-between mb-3">
                    <div class="col-6">
                <label asp-for="QuestionType"></label>

            <select asp-for="QuestionType"
            asp-items="Html.GetEnumSelectList<QuestionTypeDto>()"
            class="form-control" id="multiple">
            </select>
          </div>
                   
            <div class="col-6">
             <label asp-for="IsRequired"></label>
             <input type="checkbox" asp-for="IsRequired" />
          </div>
                </div>
                <div class=" mt-4">
                    <span class="text-danger">*</span>
                    <label asp-for="Text" class="form-label"></label>
                    <input type="text"  class="form-control" asp-for="Text"  aria-label="Text input with dropdown button">
                </div>
                <span asp-validation-for="Text" class="text-danger"></span>

                <div class="row d-flex justify-content-between">
                    <!--1-->
                    <div class=" col-6" id="box1">
                        <div class=" form-group" id="">
                            <label asp-for="QuestionType" class="form-label">الإختيار الاول</label>
                            <input type="text"  class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                        </div>
                    </div>
                    <!--2-->
                    <div class=" col-6 " id="box2">
                        <div class="form-outline form-group" id="">
                            <input type="text" name="slection_two" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                            <label for="slection_two" class="form-label">Selection Two</label>
                        </div>
                    </div>
                    <!--3-->
                    <div class="col-6 mt-2" id="box3">
                        <div class="form-outline form-group" id="">
                            <input type="text" name="selection_three" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                            <label for="selection_three" class="form-label">Selection Three</label>
                        </div>
                    </div>
                    <!--4-->
                    <div class="col-6 mt-2" id="box4">
                        <div class="form-outline form-group" id="">
                            <input type="text" name="selection_four" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                            <label for="selection_four" class="form-label">Selection Four</label>
                        </div>
                    </div>
                    <!--5-->
                    <div class="col-6 mt-2" id="box5">
                        <div class="form-outline form-group" id="">
                            <input type="text" name="selection_five" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                            <label for="selection_five" class="form-label">Selection Five</label>
                        </div>
                    </div>
                    <!-- 6 -->
                    <div class="col-6 mt-2" id="box6">
                        <div class="form-outline form-group" id="">
                            <input type="text" name="selection_six" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                            <label for="selection_six" class="form-label">Selection Six</label>
                        </div>
                    </div>

                    <!-- 7 -->
                    <div class="col-6 mt-2 " id="box7">
                        <div class="form-outline form-group" id="">
                            <input type="text" name="selection_seven" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                            <label for="selection_seven" class="form-label">Selection Seven</label>
                        </div>
                    </div>
                    <!-- 8 -->
                    <div class="col-6 mt-2 " id="box8">
                        <div class="form-outline form-group" id="">
                            <input type="text" name="selection_eight" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                            <label for="selection_eight" class="form-label">Selection Eight</label>
                        </div>
                    </div>
                    <div class="col-sm mt-2 " id="AddIcon">
                        <button type="button" class="btn btn-labeled   btn-primary">
                            <span class="btn-label"><i class="fa fa-plus fa-3"></i></span>
                        </button>
                    </div>
                </div>

                <div class="mt-4"></div>
                <button class="btn btn-primary" asp-action="AddQuestion" asp-controller=""><i class="fa-solid fa-plus"></i>Add</button>
            </form>
        </div>
    </div>
</div>

<script>
      const el = document.getElementById('multiple');

    const box1 = document.getElementById('box1');
    const box2=document.getElementById('box2');
    const box3=document.getElementById('box3');
    const addicon=document.getElementById('AddIcon');
    const box4 = document.getElementById('box4');
    const box5=document.getElementById('box5');
    const box6=document.getElementById('box6');
    const box7 = document.getElementById('box7');
    const box8=document.getElementById('box8');
     var counter=0;
    el.addEventListener('change', function handleChange(event) {
      if (event.target.value === '1') {
        box1.style.display = 'block';
        box2.style.display= 'block';
        box3.style.display= 'block';
        addicon.style.display='block';
        counter=0;

      } else {
          box1.style.display = 'none';
          box2.style.display= 'none';
          box3.style.display= 'none';
          addicon.style.display='none';
          box4.style.display='none';
          box5.style.display='none';
          box6.style.display='none';
          box7.style.display='none';
          box8.style.display='none';
          counter=0;
      }
    });
    addicon.addEventListener('click',function handleClick(event){
      counter=counter+1;

    if(counter==1){
      box4.style.display='block';
    }
    else if(counter==2){
      box5.style.display='block';
    }
    else if(counter==3){
      box6.style.display='block';    }
    else if(counter==4){
      box7.style.display='block';
    }
    else if(counter==5){
      box8.style.display='block';
      addicon.style.display='none';
    }

    else{
      box4.style.display='none';
      box5.style.display='none';
      box6.style.display='none';
      box7.style.display='none';
      box8.style.display='none';
      addicon.style.display='none';
      counter=0;
    }

    })
</script>