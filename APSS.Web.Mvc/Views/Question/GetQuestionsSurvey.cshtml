
@model IEnumerable<APSS.Web.Dtos.QuestionDto>
<partial name="_SurveyNavBar" />

<!--table-->

<div class="container-fluid  border p-2  col-ms-12  my-0 mt-2  rounded ml-2 animal-table" id="">

    <form class="row gx-3 gy-2 align-items-center mb-3 ">
        <div class="col-sm-6">

            <div class="input-group">
                <a href="#" class="input-group-text text-decoration-none" style="background-color:#1B73B3">

                    <i class="fal fa-search " style="color:white"></i>
                </a>

                <input type="text" class="form-control" id="search" placeholder="Search..." onkeyup="searchTable()">

                <button class="btn btn-outline-secondary dropdown-toggle border border-black-100 text-dark" type="button" data-bs-toggle="dropdown" aria-expanded="false">Dropdown</button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#">Action</a></li>
                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Separated link</a></li>
                </ul>
            </div>
        </div>
        <div class="col-sm-2 ">
            <label class="visually-hidden" for="searchby">Search By</label>
            <select class="form-select " id="searchby">
                <option selected>Choose search by</option>
                <option value="1">Name</option>
                <option value="2">Id</option>
                <option value="3">Address</option>
            </select>
        </div>
    </form>

    <div class="col-sm-12  ">

        <div class="container mt-3 bg-light table-rsponsive mb-3 table-success table-wrapper-scroll-y table-wrapper-scroll-x ">

            <table class="table table-hover table-responsive table-bordered   table-striped  " id="myTable">

                <thead>
                    <tr class="header  bg-fixed " style="border-bottom:2px #5C5C5C solid;">
                        <th style="width:8%;" class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.Id)</th>
                        <th style="width:30%;" class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.Text)</th>
                        <th style="width:20%;" class=" text-capitalize align-middle"> @Html.DisplayNameFor(m=>m.IsRequired)</th>
                        <th style="width:30%;" class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.QuestionType)</th>
                        <th style="width:20%;" class=" text-capitalize align-middle"> @Html.DisplayNameFor(m=>m.Survey.Name)</th>
                        <th style="width:0%;" class=" text-capitalize align-middle">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        
                    
                    <tr class="align-top">
              
                        <td class="text-break text-capitalize align-middle">@item.Id</td>
                        <td class="text-break text-capitalize align-middle"> @item.Text</td>
                        <td class="text-break text-capitalize align-middle">@item.IsRequired</td>
                        <td class="text-break text-capitalize align-middle">@item.QuestionType </td>
                        <td class="text-break text-capitalize align-middle">@item.Survey.Name</td>
                        <td class="align-middle center">

                            <div class=" dropend">
                                <a class="" role="button" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <li><a class="dropdown-item" asp-controller="Question" asp-action="QuestionDetails"><div class="d-flex justify-content-between"> <span>تفاصيل</span>  <span><i class="fa-solid fa-info"></i> </span> </div></a></li>
                                    <li><a class="dropdown-item" asp-controller="Question" asp-action="ConfirmDeleteQuestion"><div class="d-flex justify-content-between"> <span>حذف</span>  <span><i class="fa-solid fa-trash-can"></i> </span> </div></a></li>
                                 
                                    <li class="">
                                        <a class="dropdown-item" asp-action="EditQuestion" asp-controller="Question">
                                        <div class="d-flex justify-content-between"> <span>تحديث </span>  <span><i class="fa-solid fa-pen-to-square"></i> </span> </div></a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <nav aria-label="Page navigation example" class="float-left pl-5">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

<div class="offcanvas offcanvas-end" id="question">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title"> Update Question</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <partial name="AddQuestion" />
    </div>
</div>
