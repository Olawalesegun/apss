@model APSS.Web.Dtos.AccountDto
 @await Html.PartialAsync("_requiredStyle.cshtml")
<div class="container-fluid ">
    <div class=" col-lg-5 col-sm-12    pb-3">
        <form class="w-100 mt-3 " method="post" asp-controller="Users" asp-action="AddAccount">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="UserId" />
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-2 ">
                <h3 class="">
                    اضافة موظف
                </h3>
            </div>
            <!-- Text input for account name-->
            <div class=" mb-2">
                <span class="text-danger fw-bold">*</span>
                <label class="form-label" asp-for="HolderName"></label>
                <input type="text" id="account-name" asp-for="HolderName" placeholder="محمد..." class="form-control" />
                <span asp-validation-for="HolderName" class="text-danger"></span>
            </div>
            <!-- Text input for AccessLevel -->
            <div class="mb-2">
                <span class="text-danger fw-bold">*</span>
                <label class="form-label" asp-for="PasswordHash"></label>
                <input type="password" id="account-passwor" asp-for="PasswordHash" class="form-control d-inline " />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class=" mb-2">
                <span class="text-danger fw-bold">*</span>
                <label class="select-label">الصلاحيات</label>
                <select class="form-select" asp-for="Permissions" asp-items="@ViewBag.permission"></select>
            </div>
