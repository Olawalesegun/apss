@model APSS.Web.Dtos.AccountDto
 @await Html.PartialAsync("_requiredStyle.cshtml")
<div class="col-sm-12 col-lg-5 d-flex mx-sm-2 m-lg-4 border rounded p-3">
    <form class="row mt-2 needs-validation" method="post" asp-controller="Accounts" asp-action="AddAccount" novalidate>
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="UserId" />
        <!-- 2 column puts for the National number and Phome Number-->
        <div class="center d-flex justify-content-center mb-2 ">
            <h3 class="text-muted">
                اضافة موظف
            </h3>
        </div>

        <!-- Text input for account name-->

        <div class=" mt-4    position-relative">
            <div class="input-group ">
                <span class="input-group-text">
                    <i class="fa-solid fa-user"></i>
                </span>
                <div class="form-floating col ">
                    <input type="text" id="account-name" asp-for="HolderName" placeholder="Holder Name" class="form-control " required />
                    <label class="form-label" asp-for="HolderName"></label>
                    <div class="invalid-tooltip ">
                        يجب ادخال اسم الموظف
                    </div>
                </div>
            </div>
        </div>

        <div class=" mt-4  position-relative">
            <div class="input-group">
                         <span class="input-group-text">
                            <i class="fa-solid fa-key"></i>
                        </span>
                <div class="form-floating col">
                    <input type="password" id="id_password" name="password" asp-for="PasswordHash" placeholder="Password" class="form-control " required />
                    <label class="form-label" asp-for="PasswordHash"></label>
                    <div class="invalid-tooltip">
                        يجب ادخال كلمة الرور
                    </div>
                </div>
                 <div class="input-group-text"><i class="far fa-eye" id="togglePassword" style=" cursor: pointer;"></i></div>
            </div>
        </div>
        <div class=" mb-3 mt-4 ">
            <div class="input-group">
                <span class="input-group-text">

                    الصلاحيات
                </span>
                <div class="form-floating col ">
                    <select class="form-select" asp-for="Permissions" asp-items="@ViewBag.permission" required>                </select>
                    <label class="select-label">الصلاحيات</label>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-start col">
            <h5>حالة الحساب </h5>
        </div>
        <div class="form-check form-check-inline mx-3 ">
            <input class="form-check-input" type="checkbox" value="true" id="delete" asp-for="IsActive" />
            <label class="form-check-label" asp-for="IsActive">      </label>
        </div>
        <div>
            <div class="row d-flex justify-content-end">
            <!-- Submit b        utton -->
            <a onClick="history.go(-1); return false;" class="btn btn-link w-25 mt-4 mx-3" style="background-color:#DCEEFB">    الغاء</a>
            <button type="submit" class="btn btn-primary w-25  mt-4">اضافة        </button>
        </div>
        </div>
    </form>
</div>

    @section scripts{
<script>
        $(document).ready(function(){
    $(".sidebar ul li.active").removeClass('active');
    $("#accountManagement").addClass('active');
    });
     document.getElementById("nav-system-name").innerHTML="ادارة الموظفين";
      document.getElementById("media-system-name").innerHTML="ادارة الموظفين";

    $(".scrollmenu a").on('click',function(){
        $(".scrollmenu a.MediaActive").removeClass('MediaActive');

    });
    $(".manage-ment ul li a").on('click',function(){
        $(".scrollmenu a.actives").removeClass('actives');
        $("#animalGroups").addClass('actives');

    });
    $("#users").removeClass('actives');
       $("#lands").removeClass('actives');
       $("#landProducts").removeClass('actives');
        $("#confirmation").removeClass('actives');
        $("#units").removeClass('actives');
        $("#userMedia").removeClass('actives');
         $("#accounts").addClass('actives');
         $("#accountMedia").addClass('actives');
</script>
    }