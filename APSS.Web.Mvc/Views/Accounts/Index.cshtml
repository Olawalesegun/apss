@model IEnumerable<APSS.Web.Dtos.AccountDto>
 @await Html.PartialAsync("_requiredStyle.cshtml")

<div class="container-fluid  border p-2  col-ms-12  my-0 mt-2  rounded ml-2 animal-table" id="">
    <form class="row d-flex justify-content-start d-inline mb-3 " method="post" asp-controller="Accounts" asp-action="Index">
        <div class=" mb-2 col-sm col-lg-6  d-flex">
            <button type="submit" class="btn btn-primary search-btn" asp-action="Index">
                <i class="fas fa-search"></i>
            </button>
            <input type="search" class="form-control" id="search" name="searchString" onkeyup="searchTable()" placeholder="بحث..." />
        </div>

        <div class="col-sm-2 col-lg-1 mb-2 ">

            <select class="form-select " id="searchby">
                <option selected>20</option>
                <option value="1">40</option>
                <option value="2">80</option>
                <option value="3">100</option>
            </select>
        </div>
        <div class="col-sm col-lg-2 mb-2 ">

            <select class="form-select " id="searchby" name="searchBy">
                <option selected>بحث بواسطة</option>
                <option value="1">الاسم</option>
                <option value="2">الرقم</option>
                <option value="3">رقم التلفون</option>
                <option value="4">رقم البطاقة</option>
            </select>
        </div>
    </form>

    <div class="col-sm-12  ">

        <div class=" my-3 bg-light table-rsponsive  table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar">

            <table class="table table-hover table-responsive table-bordered   table-striped mb-0 " id="myTable">

                <thead>
                    <tr class="header  bg-fixed border border-bottom fw-bold">
                        <th style="width:8%;" class=" fw-bold align-middle">@Html.DisplayNameFor(m=>m.Id)</th>
                        <th style="width:30%;" class="fw-bold align-middle">@Html.DisplayNameFor(m=>m.HolderName)</th>
                        <th style="width:20%;" class="fw-bold align-middle">@Html.DisplayNameFor(m=>m.PhoneNumber)</th>
                        <th style="width:30%;" class="fw-bold align-middle">@Html.DisplayNameFor(m=>m.NationalId)</th>
                        <th style="width:0%;" class="fw-bold align-middle">الخيارات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr class="align-top">

                            <td class="text-break text-capitalize align-middle">@item.Id</td>
                            <td class="text-break text-capitalize align-middle"> @item.HolderName</td>
                            <td class="text-break text-capitalize align-middle">@item.PhoneNumber</td>
                            <td class="text-break text-capitalize align-middle">
                                @item.NationalId
                            </td>
                            <td class="align-middle center">
                                <div class=" dropend">
                                    <a class="" href="#" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Accounts" asp-action="AccountDetails"><div class="d-flex justify-content-between"> <span>تفاصيل</span>  <span><i class="fa-solid fa-info"></i> </span> </div> </a></li>
                                        <li><a class="dropdown-item btn-link" asp-controller="Accounts" asp-action="DeleteAccount"><div class="d-flex justify-content-between"> <span>حذف</span>  <span><i class="fa-solid fa-trash-can"></i> </span> </div></a></li>
                                        <li><a class="dropdown-item btn-link" asp-controller="Accounts" asp-action="EditAccount"><div class="d-flex justify-content-between"> <span>تعديل</span>  <span><i class="fa-solid fa-pen-to-square"></i> </span> </div></a></li>
                                        @*<li><a class="dropdown-item btn-link" asp-controller="Users" asp-action="UserAccounts"><div class="d-flex justify-content-between"> <span>Accounts</span>  <span><i class="fa-solid fa-users"></i> </span> </div></a></li>*@
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="container col-sm-12 col-lg-4 col-md-4">
            <ul class="pagination d-flex justify-content-between">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">6</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </div>
    </div>
</div>

@section scripts{
<script>
        $(document).ready(function(){
    $(".sidebar ul li.active").removeClass('active');
    $("#accountManagement").addClass('active');
    });
     document.getElementById("nav-system-name").innerHTML="ادارة الموظفين";
      document.getElementById("media-system-name").innerHTML="ادارة الموظفين";

    $(".scrollmenu a").on('click',function(){
        $(".scrollmenu a.MediaActive").removeClass('MediaActive');

    });
    $(".manage-ment ul li a").on('click',function(){
        $(".scrollmenu a.actives").removeClass('actives');
        $("#animalGroups").addClass('actives');

    });
    $("#users").removeClass('actives');
        $("#userMedia").removeClass('actives');
         $("#accounts").addClass('actives');
         $("#accountMedia").addClass('actives');
</script>
}