@model IEnumerable<APSS.Web.Dtos.SeasonDto>
@{
    ViewData["title"] = "Season Management Page";
}

@await Html.PartialAsync("_dataNavBar")
<div class="container-fluid  border p-2  col-ms-12  mt-0  rounded ml-2 " id="">

    <form class="row gx-3 gy-2 align-items-center mb-3 ">
        <div class="col-sm-6">
            <label class="visually-hidden" for="search"></label>
            <div class="input-group">
                <a href="#" class="input-group-text " style="background-color:#1B73B3">
                    <div class=" ">
                        <i class="fal fa-search" style="color:white"></i>
                    </div>
                </a>
                <input type="text" class="form-control" placeholder="Search..." id="search" onkeyup="searchTable()">
                <!-- <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name"> -->
            </div>
        </div>
        <div class="col-sm-2">
            <label class="visually-hidden" for="specificSizeSelect">Search By</label>
            <select class="form-select" id="specificSizeSelect">
                <option selected>Choose...</option>
                <option value="1">Name</option>
                <option value="2">Id</option>
                <option value="3">Address</option>
            </select>
        </div>
    </form>

    <div class="col-sm-12  ">

        <div class="container mt-3 bg-light table-responsive mb-3 table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar">

            <table class="table table-hover table-responsive table-bordered   table-striped  " id="myTable">

                <thead>
                    <tr class="header">
                        <th style="width:5%;" class=" text-capitalize align-middle">ID</th>
                        <th style="width:15%;" class=" text-capitalize align-middle">Name</th>
                        <th style="width:20%;" class=" text-capitalize align-middle">Start At</th>
                        <th style="width:20%;" class=" text-capitalize align-middle">Ends At</th>
                        <th style="width:20%;" class=" text-capitalize align-middle">Created At</th>
                        <th style="width:20%;" class=" text-capitalize align-middle">Modified At</th>
                        <th style="max-width:5%;" class=" text-capitalize align-middle">خيارات </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model!)
                    {
                        <tr>
                            <td class="text-break text-capitalize align-middle">@item.Id</td>
                            <td class="text-break text-capitalize align-middle">@item.Name</td>
                            <td class="text-break text-capitalize align-middle">@item.StartsAt</td>
                            <td class="text-break text-capitalize align-middle">@item.EndsAt</td>
                            <td class="text-break text-capitalize align-middle">@item.CreatedAt</td>
                            <td class="text-break text-capitalize align-middle">@item.ModifiedAt</td>
                            <td class="align-middle center">
                                <div class=" dropend">
                                    <a class="" href="#" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Season" asp-action="Update" asp-route-id="@item.Id">Update</a></li>
                                        <li><a class="dropdown-item" asp-controller="Season" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <nav aria-label="Page navigation example" class="float-left pl-5">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
@section scripts{
<script>
     document.getElementById("nav-system-name").innerHTML="Data Management";
    document.getElementById("media-system-name").innerHTML="Data Management";
       $("#landProducts").removeClass('actives');
       $("#animalGroups").removeClass('actives');
    $("#animalProducts").removeClass('actives');
    $("#lands").addClass('actives');
</script>
}