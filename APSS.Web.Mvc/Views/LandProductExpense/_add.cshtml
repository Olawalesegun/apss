@{
    ViewData["title"] = "Add Product Expense Page";
}
<div class="offcanvas offcanvas-end" id="landProductExpense" style="background-color:#F3F4F4 !important">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Land Product Expense</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">

        <form class=" mt-3 ">
            <!--  column puts for the Land Product Expense Type -->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    Land Product Expense Information
                </h3>
            </div>
            <div class="form-outline mb-4">
                <input type="text" id="landProductExpense_type" name="landProductExpense_type" class="form-control" />
                <label class="form-label" for="landProductExpense_type">Land Product Expense Type</label>
            </div>
            <div class="form-outline mb-4">
                <input type="number" id="price" name="price" class="form-control" />
                <label class="form-label" for="price">price</label>
            </div>
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4 mt-4">Add</button>
        </form>
    </div>
</div>