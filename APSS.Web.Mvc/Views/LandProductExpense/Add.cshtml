@model APSS.Web.Dtos.ProductExpenseDto
@{
    ViewData["title"] = "صفحة إضافة تكلفة ";
}
<form class=" mt-3 " method="post" asp-action="add">
    <!--  column puts for the Land Product Expense Type -->
    <div class="center d-flex justify-content-center mb-3 ">
        <h3 class=" ">
            تفاصيل التكلفة
        </h3>
    </div>
    <div class="form-outline mb-4">
        <input type="text" asp-for="Type" class="form-control" />
        <label class="form-label" asp-for="Type"></label>
    </div>
    <input type="hidden" asp-for="ProductId" />
    <div class="form-outline mb-4">
        <input type="number" asp-for="Price" class="form-control" />
        <label class="form-label" asp-for="Price"></label>
    </div>
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4 mt-4">إضافة</button>
</form>