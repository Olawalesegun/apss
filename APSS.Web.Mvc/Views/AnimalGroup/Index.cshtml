@model APSS.Web.Dtos.AnimalGroupAndProductDto
<!--table-->

<partial name="_dataNavBar" />
<div class="aling" id="loader"></div>

<div class="   p-2  col-ms-12  my-0 mt-2  rounded ml-2 " id="table">

    <form class="row d-flex justify-content-between  d-inline mb-3 ">
        <div class=" mb-3 col-sm  d-flex">
            <button type="button" class="btn btn-primary search-btn">
                <i class="fas fa-search"></i>
            </button>
                <input type="search" class="form-control" id="search" onkeyup="searchTable()" />
        </div>
        <div class="col-sm-2 col-lg-1 mb-2 ">

            <select class="form-select " id="searchby">
                <option selected>20</option>
                <option value="1">40</option>
                <option value="2">80</option>
                <option value="3">100</option>
            </select>
        </div>
        <div class="col-sm mb-3 ">

            <select class="form-select " id="searchby">
                <option selected>البحث بواسكة</option>
                <option value="1">Name</option>
                <option value="2">Id</option>
                <option value="3">Address</option>
            </select>
        </div>
        <div class="col-sm d-flex   d-inline mb-3   ">
            <a class=" btn btn-primary mx-2" role="button" data-bs-toggle="offcanvas" data-bs-target="#AddUnit">
                <i class="fa-solid fa-plus"></i>
                وحدة
            </a>
            <a class=" btn btn-primary " role="button" asp-controller="AnimalGroup" asp-action="AddAnimalGroup">
                <i class="fa-solid fa-plus"></i>
                حيوان
            </a>
        </div>
    </form>

    <div class="col-sm-12  ">

        <div class=" mt-3 bg-light table-rsponsive mb-3 table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar" id="">
            <table class="table table-hover table-responsive table-bordered   table-striped  " id="sortTable">

                <thead class="table-light">
                    <tr class="header  bg-fixed " style="border-bottom:2px #5C5C5C solid;">
                        <th style="width:8%;" class=" fw-bold align-middle"> ارقم</th>
                        <th style="width:30%;" class="fw-bold align-middle">النوع</th>
                        <th style="width:20%;" class="fw-bold align-middle">الكمية</th>
                        <th style="width:30%;" class="fw-bold align-middle">الجنس</th>
                        <th style="width:0%;" class="fw-bold align-middle">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.AnimalGroupDtos)
                    {

                        <tr>

                            <td>@item.Id</td>
                            <td>@item.Type</td>
                            <td>@item.Quantity</td>
                            <td>@item.Sex</td>

                            <td class="align-middle center">
                                <div class=" dropend">
                                    <a class="" href="#" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-route-id="@item.Id" asp-action="AnimalDetails"><div class="d-flex justify-content-between"> <span>Details</span>  <span><i class="fa-solid fa-info"></i> </span> </div> </a></li>
                                        <li><a class="dropdown-item btn-link" asp-controller="AnimalGroup" asp-action="DeleteAnimalGroup"><div class="d-flex justify-content-between"> <span>Delete</span>  <span><i class="fa-solid fa-trash-can"></i> </span> </div></a></li>
                                        <li><a class="dropdown-item btn-link" asp-controller="AnimalGroup" asp-action="EditAnimalGroup"><div class="d-flex justify-content-between"> <span>Update</span>  <span><i class="fa-solid fa-pen-to-square mx-1"></i> </span> </div></a></li>
                                        <li class="">
                                            <a class="dropdown-item text-decoration-none" role="button" asp-route-Id="@item.Id" asp-controller="AnimalProduct" asp-action="CreateAnimalProduct">

                                                <div class="d-flex justify-content-between"> <span>Add Product</span>  <span><i class="fa-solid fa-plus"></i> </span> </div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
        <div class="d-flex container justify-content-center">
        <div class=" col-sm-12 px-sm-2 col-lg-4 col-md-4">
            <ul class="pagination d-flex justify-content-between">
                <li class="page-item"><a class="page-link" href="#">السابق</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">6</a></li>
                <li class="page-item"><a class="page-link" href="#">التالي</a></li>
            </ul>
        </div>
    </div>
</div>
<!-- canvas body for create-->
@section scripts{
<script>

     $(document).ready(function(){
    $(".sidebar ul li.active").removeClass('active');
     $("#dataManagement").addClass('active');
    });
     document.getElementById("nav-system-name").innerHTML="ادارة الموظفين";
    document.getElementById("media-system-name").innerHTML=" ادارة الموظفين";

       $("#animalProducts").removeClass('actives');
       $("#lands").removeClass('actives');
       $("#landProducts").removeClass('actives');
        $("#confirmation").removeClass('actives');
        $("#units").removeClass('actives');
       $("#animalGroups").addClass('actives');
</script>
    }