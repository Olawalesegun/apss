@{
}
@model List<string>

<div class="modal fade" id="ConfirmDelete" tabindex="-1" aria-labelledby="ModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModelLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row d-flex justify-content-between">
                    <div class="col-sm-6">
                        <h5>@Model[0]</h5>
                    </div>
                    <div class="col-sm-6">
                        <p>@Model[1]</p>
                    </div>
                    <div class="col-sm-6">
                        <h5>@Model[2]</h5>
                    </div>
                    <div class="col-sm-6">
                        <p>@Model[3]</p>
                    </div>
                    <div class="col-sm-6">
                        <h5>@Model[4]</h5>
                    </div>
                    <div class="col-sm-6">
                        <p>@Model[5]</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn " data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-danger  ">Confirm</button>
            </div>
        </div>
    </div>
</div>