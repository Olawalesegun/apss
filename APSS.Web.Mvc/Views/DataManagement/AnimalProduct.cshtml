@model APSS.Web.Dtos.AnimalGroupAndProductDto
<partial name="_dataNavBar" />

<!--table-->

<div class="container-fluid  border p-2  col-ms-12  my-0 mt-2  rounded ml-2 animal-table" id="">

    <form class="row gx-3 gy-2 align-items-center mb-3 ">
        <div class="col-sm-6">

            <div class="input-group mb-1">
                <button type="button" class="btn btn-primary search-btn">
                    <i class="fas fa-search"></i>
                </button>
                <div class="form-outline" style="width:80%">
                    <input type="search" id="form1" class="form-control" />
                    <label class="form-label" for="form1">Search</label>
                </div>
            </div>
        </div>
        <div class="col-sm-2 ">

            <select class="select form-select" data-mdb-filter="true">
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
                <option value="4">Four</option>
                <option value="5">Five</option>
                <option value="6">Six</option>
                <option value="7">Seven</option>
                <option value="8">Eight</option>
                <option value="9">Nine</option>
                <option value="10">Ten</option>
            </select>
        </div>
    </form>

    <div class="col-sm-12  ">

        <div class="container mt-3 bg-light table-rsponsive mb-3 table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar ">

            <table class="table table-hover table-responsive table-bordered   table-striped  " id="myTable">

                <thead>
                    <tr class="header  bg-fixed " style="border-bottom:2px #5C5C5C solid;">
                        <th style="width:8%;" class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.AnimalProducts.Id)</th>
                        <th style="width:30%;" class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.AnimalProducts.Name)</th>
                        <th style="width:20%;" class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.AnimalProducts.Quantity)</th>
                        <th style="width:30%;" class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.AnimalProducts.CreatedAt)</th>
                        <th style="width:0%;" class=" text-capitalize align-middle">الخيارات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AnimalProductList)
                    {

                        <tr class="align-top">

                            <td class="text-break text-capitalize align-middle">@item.Id</td>
                            <td class="text-break text-capitalize align-middle"> @item.Name</td>
                            <td class="text-break text-capitalize align-middle">@item.Quantity</td>
                            <td class="text-break text-capitalize align-middle">
                                @item.CreatedAt
                            </td>
                            <td class="align-middle center">

                                <div class=" dropend">
                                    <a class="" role="button" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="dropdown-item" asp-action="AnimalProductDetails"><div class="d-flex justify-content-between"> <span>تفاصيل</span>  <span><i class="fa-solid fa-info"></i> </span> </div> </a></li>
                                        <li><a class="dropdown-item" asp-controller="DataManagement" asp-action="DeleteAnimalProduct"><div class="d-flex justify-content-between"> <span>حذف</span>  <span><i class="fa-solid fa-trash-can"></i> </span> </div></a></li>
                                        <li class="">
                                            <a class="dropdown-item" asp-controller="DataManagement" asp-action="AddProductExpense">
                                                <div class="d-flex justify-content-between"> <span>اضافة تكلفة</span>  <span><i class="fa-solid fa-dollar-sign"></i> </span> </div>
                                            </a>
                                        </li>
                                        <li class="">
                                            <a class="dropdown-item " asp-controller="DataManagement" asp-action="EditAnimalProduct">
                                                <div class="d-flex justify-content-between"> <span>تعدل </span>  <span><i class="fa-solid fa-pen-to-square"></i> </span> </div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item active"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</div>

@section scripts{
<script>

     $(document).ready(function(){
    $(".sidebar ul li.active").removeClass('active');
     $("#dataManagement").addClass('active');
    });

        $(document).ready(function(){
         $(".scrollmenu a.MediaActive").removeClass('MediaActive');
         $("#animalProductMedia").addClass('MediaActive')

     });

       $("#animalGroups").removeClass('actives');
       $("#lands").removeClass('actives');
       $("#landProducts").removeClass('actives');

         $("#animalProducts").addClass('actives');
</script>
}