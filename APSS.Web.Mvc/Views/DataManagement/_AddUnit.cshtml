@model APSS.Web.Dtos.AnimalProductUnitDto
<div class="offcanvas offcanvas-end" id="AddUnit">
    <div class="offcanvas-header shadow-sm">
        <h5 class="offcanvas-title">Add Animal Product Unit</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">

        <form class=" mt-3 " method="post" asp-controller="DataManagement" asp-action="AddUnit">
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    Add Unit
                </h3>
            </div>
            <div class="col">
                <div class="form-outline">
                    <input type="text" id="product_name" asp-for="Name" class="form-control" />
                    <label class="form-label" asp-for="Name">Name</label>
                </div>
            </div>
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary w-100   mb-4 mt-4">Add</button>
        </form>
    </div>
</div>