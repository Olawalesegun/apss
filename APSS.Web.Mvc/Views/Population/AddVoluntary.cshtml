@model APSS.Web.Dtos.VoluntaryDto

<form class=" mt-3 ">
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    Add New Voluntary 
                </h3>
            </div>
            <div class=" mb-4">
                
                    <div class="form-outline">
                        <input type="text" id="name_voluntary" name="name_voluntary" asp-for="Name" class="form-control" />
                        <label class="form-label" for="name_voluntary" asp-for="Name">Name</label>
                    </div>
               
                    <div class="form-outline mt-4">
                        <input type="number" id="field_voluntary" asp-for="Field" name="field_voluntary" class="form-control" />
                        <label class="form-label" for="field_voluntary" asp-for="Field">Field</label>
                    </div>
            </div>


            <!-- Submit button -->
            <button type="submit" class="btn btn-primary w-100   mb-4 mt-4" asp-action="AddVoluntary"><i class="fa-solid fa-plus fa-lg"></i>Add</button>
        </form>