@model APSS.Web.Dtos.FamilyAddDto
<div class="container-fluid px-3 py-3  ">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4 style="border-bottom :2px darkgray solid;">اضافة عائلة</h4>
        </div>

        <form class=" mt-3 "  method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-2">
                    <div class="form-outline ">
                        <input type="text"  asp-for="Name"  class="form-control" />
                        <label class="form-label" asp-for="Name"></label>
                    </div>
                    <span asp-validation-for="Name" class="text-danger mb-4"></span>
               
                    <div class="form-outline mt-4 ">
                        <input type="text"  asp-for="LivingLocation" class="form-control" />
                        <label class="form-label" asp-for="LivingLocation"></label>
                    </div>
                    <span asp-validation-for="LivingLocation" class="text-danger mb-4"></span>
                    </div>
               
            <div class="d-inline">
        <button class="btn btn-primary mt-4 mx-1" asp-action="AddFamily"> <i class="fa-solid fa-plus mx-2"></i><span>إضافة</span>  </button>
        <button class="btn btn-danger mt-4 mx-1" asp-action="GetFamilies"><i class="fa-solid fa-share mx-2"></i><span>رجوع</span>  </button>
        </div>
        </form>
        </div>
  </div>

