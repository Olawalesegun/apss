@model APSS.Web.Dtos.FamilyDto
<div class="">
        <form class=" mt-3 "  method="post">
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    Add New New Family
                </h3>
            </div>
            <div class=" mb-4">
                
                    <div class="form-outline">
                        <input type="text" id="name_family" asp-for="@Model.Name"  class="form-control" />
                        <label class="form-label" for="name_family" asp-for="@Model.Name">Name</label>
                    </div>
               
               
                    <div class="form-outline mt-4">
                        <input type="text" id="Living_Location" name="Living_Location" asp-for="LivingLocation" class="form-control" />
                        <label class="form-label" asp-for="LivingLocation">Living_Location</label>
                    </div>
               
            </div>


            <!-- Submit button -->
            <button type="submit" class="btn btn-primary w-100   mb-4 mt-4" asp-action="AddFamily" >Add <i class="fa-solid fa-plus fs-lg"></i></button>
        </form>
  </div>

