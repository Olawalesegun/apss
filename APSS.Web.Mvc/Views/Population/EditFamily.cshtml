
@model APSS.Web.Dtos.FamilyDto

        <form class=" mt-3 ">
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    Edit Family
                </h3>
            </div>
            <div class=" mb-4">
                    <div class="form-outline">
                        <input type="text" id="family_name" asp-for="Name" name="family_name" class="form-control" />
                        <label class="form-label" asp-for="Name">Name</label>
                    </div>
                
               
                    <div class="form-outline mt-4">
                        <input type="text" id="LivingLocation" asp-for="LivingLocation" name="LivingLocation" class="form-control" />
                        <label class="form-label" asp-for="LivingLocation">Living Location </label>
                    </div>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary w-100   mb-4 mt-4" asp-action="UpdateFamily"><i class="fa-solid fa-pen-to-square fa-lg"></i>Edit</button>
        </form>
    </div>
</div>

