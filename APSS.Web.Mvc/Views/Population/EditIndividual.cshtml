@model APSS.Web.Dtos.IndividualDto

<form class=" mt-3 ">
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class="text-decoration-underline">
                   تحديث بيانات الفرد
                </h3>
            </div>
            <!-- Text input for individual name-->
            <div class="form-outline mb-4">
                <input type="text" id="individual_name" asp-for="Name" value="@Model.Name" name="individual_name" class="form-control"  />
                <label class="form-label"  asp-for="Name">Name</label>
            </div>
            <!-- Text input for job -->
            <div class="form-outline mb-4">
                <input type="text" id="individual_job" asp-for="Name" value="@Model.Job" name="individual_job" class="form-control" />
                <label class="form-label" asp-for="Job">Job</label>
            </div> 

             <!-- Text input for phonenumber -->
              <div class="form-outline mb-4">
                <input type="tel" id="individual_phone" asp-for="PhonNumber" value="@Model.PhonNumber" name="individual_phone" class="form-control" />
                <label class="form-label" asp-for="PhonNumber">Phone Number</label>
            </div> 
            
             <!-- Text input for NationalId -->
              <div class="form-outline mb-4">
                <input type="number" id="individual_NationalId" asp-for="NationalId" value="@Model.NationalId" name="individual_NationalId" class="form-control" />
                <label class="form-label" asp-for="NationalId">NationalId</label>
            </div> 

             <!-- Text input for Address -->
              <div class="form-outline mb-4">
                <input type="text" id="individual_Address" asp-for="Address" value="@Model.Address" name="individual_Address" class="form-control" />
                <label class="form-label" asp-for="Address">Address</label>
            </div> 

             <!-- Text input for DateOfBirth -->
              <div class="form-outline datepicker input-group.date-p mb-2">
                  <input type="date" id="sandbox-container-p" asp-for="DateOfBirth" value="@Model.DateOfBirth" name="indvidual_birth_date" class="form-control" />
                  <label class="form-label" asp-for="DateOfBirth">Birth Date</label>
               </div>

                 <!-- Text input for Family -->
              <div class="form-outline datepicker input-group.date-p mb-2">
                  <input type="date" id="sandbox-container-p" asp-for="Family" value="@Model.Family" name="indvidual_birth_date" class="form-control" />
                  <label class="form-label" asp-for="Family">Birth Date</label>
               </div>
            
           <!-- Gender input -->
            <div class="form-check-inline mb-2">

                <h5 class="inline">Gender:</h5>
            </div>
            <div class="form-check form-check-inline ">

                <input class="form-check-input hiden" asp-for="Sex"  type="radio" name="individual_gender" id="female" value="female" checked />
                <label class="form-check-label" asp-for="Sex">Female</label>
            </div>

            <div class="form-check form-check-inline ">
                <input class="form-check-input" type="radio" asp-for="Sex" id="male" name="individual_gender" />
                <label class="form-check-label" asp-for="Sex" > Male </label>
            </div>

            <!-- Social Status input -->
            <div class="form-check-inline mb-2">

                <h5 class="inline">Status:</h5>
            </div>
            <div class="form-check form-check-inline">

                <input class="form-check-input hiden" asp-for="SocialStatus"  type="radio" name="individual_SocialStatus" id="Marrid" value="Marrid" checked />
                <label class="form-check-label" asp-for="SocialStatus"> Marrid</label>
            </div>

            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="SocialStatus" value="@Model.SocialStatus" id="Unmarried" name="individual_SocialStatus" />
                <label class="form-check-label" for="Unmarried"> Unmarr</label>
            </div>
          
              
                   <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4 mt-4" asp-action="UpdateIndividual"><i class="fa-solid fa-pen-to-square fa-lg"></i>Edit</button>
        </form>
       