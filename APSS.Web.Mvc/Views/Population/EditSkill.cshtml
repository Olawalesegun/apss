@model APSS.Web.Dtos.SkillDto; 
 
<form class=" mt-3 ">
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    تحديث 
                </h3>
            </div>
            <div class=" mb-4">
                
                    <div class="form-outline">
                        <input type="text" id="name_skill"asp-for="Name" name="name_skill" class="form-control" value="@Model.Name" />
                        <label class="form-label" asp-for="Name">Name</label>
                    </div>

                <div class="form-outline mb-4">
                <textarea type="text" id="descriptionskill" asp-for="Description" name="descriptionskill" data="@Model.Description" class="form-control"></textarea>
                <label class="form-label" for="descriptionskill" asp-for="Description">Description</label>
            </div>
               
                    <div class="form-outline mt-4">
                        <input type="number" id="fieldskill" asp-for="Field" name="fieldskill" value="@Model.Field" class="form-control" />
                        <label class="form-label" asp-for="Field" >Field</label>
                    </div>
               
            </div>


            <!-- Submit button -->
            <button type="submit" class="btn btn-primary w-100   mb-4 mt-4" asp-action="UpdateSkill" asp-route-Id="@Model.Id"><i class="fa-solid fa-pen-to-square fa-lg"></i>Edit</button>
        </form>