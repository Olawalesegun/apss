@model APSS.Web.Dtos.SkillDto


        <form class=" mt-3 ">
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    Add New Skill 
                </h3>
            </div>
            <div class=" mb-4">
                
                    <div class="form-outline">
                        <input type="text" id="name_skill" name="name_skill" asp-for="Name" class="form-control" />
                        <label class="form-label" for="name_skill" asp-for="Name">Name</label>
                    </div>

                <div class="form-outline mb-4">
                <textarea type="text" id="descriptionskill" asp-for="Description" name="descriptionskill" class="form-control"></textarea>
                <label class="form-label" for="descriptionskill">Description</label>
            </div>
               
                    <div class="form-outline mt-4">
                        <input type="number" id="fieldskill" asp-for="Field" name="fieldskill" class="form-control" />
                        <label class="form-label" asp-for="Field">Field</label>
                    </div>
               
            </div>


            <!-- Submit button -->
            <button type="submit" asp-action="AddSkill" class="btn btn-primary w-100   mb-4 mt-4"><i class="fa-solid fa-plus fa-lg"></i>Add</button>
        </form>
  

