@model APSS.Web.Dtos.IndividualAddDto

<div class="container-fluid px-3 py-3  shadow-sm">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4 style="border-bottom :2px darkgray solid;">اضافة فرد</h4>
        </div>
<form class=" mt-3 " method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-4">
            <!-- Text input for individual name-->
            <div class="form-outline mt-4">
                <input type="text" id="individual_name"  asp-for="Name" class="form-control" />
                <label class="form-label" asp-for="Name"></label>
            </div>
            <span asp-validation-for="Name" class="text-danger mb-4"></span>
            <!-- Text input for job -->
            <div class="form-outline mt-4">
                <input type="text" id="individual_job" asp-for="Job"  class="form-control" />
                <label class="form-label" for="individual_job" asp-for="Job"></label>
            </div> 
            <span asp-validation-for="Job" class="text-danger mb-4"></span>

             <!-- Text input for phonenumber -->
              <div class="form-outline mt-4">
                <input type="tel" id="individual_phone" asp-for="PhonNumber" class="form-control" />
                <label class="form-label" for="individual_phone" asp-for="PhonNumber"> </label>
            </div> 
            <span asp-validation-for="PhonNumber" class="text-danger mb-4"></span>
            
             <!-- Text input for Address -->
              <div class="form-outline mt-4">
                <input type="text" id="individual_Address"  class="form-control" asp-for="Address" />
                <label class="form-label" for="individual_Address" asp-for="Address"></label>
            </div> 
            <span asp-validation-for="Address" class="text-danger mb-4"></span>
             
                         <!-- Text input for Family -->
            <div class=" form-outline mb-4">
              <input class="form-control" type="text"    asp-for="Family">

              <label  class="form-label" asp-for="Family"></label>
            </div>
          
            <!-- Gender input -->
            <div class="form-check mb-2">
<label asp-for="Sex"></label>
            </div>
            <div class="form-check form-check-inline ">

                <input class="form-check-input " asp-for="Sex" type="radio" value="male" checked />
                <label class="form-check-label" asp-for="Sex">ذكر</label>
            </div>
            <span asp-validation-for="Sex" class="text-danger mb-4"></span>

                         <!-- Text input for Sex -->

            <div class="form-check form-check-inline ">
                <input class="form-check-input" type="radio" asp-for="Sex" value="" id="female" />
                <label class="form-check-label" asp-for="Sex"> أنثى </label>
            </div>
            <span asp-validation-for="Sex" class="text-danger mb-4" ></span>
            </div>

        <div class="d-inline">
        <button class="btn btn-primary mt-4 mx-1" asp-action="AddIndividual"> <i class="fa-solid fa-plus mx-2"></i><span>إضافة</span>  </button>
        <button class="btn btn-danger mt-4 mx-1" asp-action="GetIndividuals"><i class="fa-solid fa-share mx-2"></i><span>رجوع</span>  </button>
        </div>  
        </form>
        </div>
        </div>