@model APSS.Web.Dtos.AccountDto
<div class="container-fluid">
    <div class="col-sm-4 d-flex">
        <form class=" mt-3 " method="post" asp-controller="AccountManagement" asp-action="AddAccount">
            <input type="hidden" asp-for="UserId" />
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class="text-decoration-underline" style="line-height:50px">
                    اضافة الحساب
                </h3>
            </div>
            <!-- Text input for account name-->
            <div class="form-outline mb-4">
                <input type="text" id="account-name" asp-for="HolderName" class="form-control" />
                <label class="form-label" asp-for="HolderName"></label>
            </div>
            <!-- Text input for AccessLevel -->
            <div class="form-outline mb-4">
                <input type="password" id="account-passwor" asp-for="PasswordHash" class="form-control d-inline" />
                <label class="form-label" asp-for="PasswordHash"></label>
            </div>
            <!-- account Permission -->
            <div class="form-check-inline">
                <h5 class="inline">الصلاحيات:</h5>
            </div>
            <!--read Permission -->
            <div class="form-check form-check-inline">
                <input class="form-check-input hiden" type="checkbox" asp-for="ReadPermission" id="read" value="read" checked />
                <label class="form-check-label" asp-for="ReadPermission"></label>
            </div>
            <!--write Permission -->
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" value="write" id="write" asp-for="WritePermission" />
                <label class="form-check-label" asp-for="WritePermission">  </label>
            </div>
            <!--update Permission -->
            <div class="form-check form-check-inline  ">
                <input class="form-check-input" type="checkbox" value="update" id="update" asp-for="UpdatePermission" />
                <label class="form-check-label" asp-for="UpdatePermission">  </label>
            </div>            <!--delete Permission -->
            <div class="form-check form-check-inline  ">
                <input class="form-check-input" type="checkbox" value="delete" id="delete" asp-for="DeletePermission" />
                <label class="form-check-label" asp-for="DeletePermission">  </label>
            </div>
            <div class="d-flex justify-content-start">
                <h5>حالة الحساب </h5>
            </div>
            <div class="form-check form-check-inline  ">
                <input class="form-check-input" type="radio" value="false" id="delete" asp-for="IsActive" />
                <label class="form-check-label" asp-for="IsActive">  </label>
            </div>
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary w-100 mb-4 mt-4">اضافة</button>
        </form>
    </div>
</div>