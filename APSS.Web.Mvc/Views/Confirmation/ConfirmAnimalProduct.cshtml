@model APSS.Web.Dtos.AnimalProductDto
@await Html.PartialAsync("_dataNavBar")
<div class="card mt-2 mx-lg-4 mx-sm-2 confirm-data">
    <div class="card-body">
        <div class="d-flex "> <i class=" " style="padding-left:2px"></i> <h4> Confirm Information </h4></div>
        <table class="table user-view-table m-0  table-borderless">
            <tbody>
                <tr class="">
                    <td>@Html.DisplayNameFor(m=>m.Id) </td>
                    <td> @Model.Id  </td>
                </tr>
                <tr>
                    <td class="text-break">@Html.DisplayNameFor(m=>m.Name) </td>
                    <td class="text-break"> @Model.Name </td>
                </tr>
                <tr>
                    <td class="text-break">@Html.DisplayNameFor(m=>m.Quantity) </td>
                    <td class="text-break"> @Model.Quantity </td>
                </tr>
                <tr>
                    <td class="text-break">@Html.DisplayNameFor(m=>m.Unit) </td>
                    <td class="text-break"> @Model.Unit </td>
                </tr>
                <tr>
                    <td class="text-break">@Html.DisplayNameFor(m=>m.PeriodTaken) </td>
                    <td class="text-break"> @Model.PeriodTaken </td>
                </tr>
                <tr>
                    <td class="text-break">@Html.DisplayNameFor(m=>m.CreatedAt) </td>
                    <td class="text-break"> @Model.CreatedAt </td>
                </tr>
                <tr>
                    <td class="text-break">@Html.DisplayNameFor(m=>m.ModifiedAt) </td>
                    <td class="text-break"> @Model.ModifiedAt </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="table-responsive m-4">
        <a role="button" class="btn btn-primary text-white  shadow-0" asp-route-id="@Model.Id" asp-controller="Confirmation" asp-action="ConfirmProduct"> صحيحة <span><i class="fa-solid fa-check "></i></span></a>
        @Html.ActionLink("غير صحيحة", "ConfirmProduct", new { id=Model.Id,value=false },new{@class="btn btn-danger text-white  shadow-0"})
    </div>
</div>