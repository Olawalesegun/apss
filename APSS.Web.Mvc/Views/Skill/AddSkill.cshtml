@model APSS.Web.Dtos.SkillDto

<div class="container-fluid px-3 py-3 mx-4 my-1">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4>اضافة مهارة</h4>
        </div>
        <form class=" mt-3 " method="post">

                   <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class=" mb-4">
                
                    <div class=" mt-4">
                        <label class="form-label" for="name_skill" asp-for="Name">Name</label>
                        <input type="text" id="name_skill"  asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                <div class=" mt-4">
                <label class="form-label" asp-for="Description">Description</label>
                <textarea type="text" id="descriptionskill" asp-for="Description"  class="form-control"></textarea>
            </div>
               
                    <div class=" mt-4">
                        <label class="form-label" asp-for="Field">Field</label>
                        <input type="number" id="fieldskill" asp-for="Field"  class="form-control" />
                    </div>
                    <span asp-validation-for="Field" class="text-danger"></span>
               
            </div>


            <!-- Submit button -->
    <div class="d-inline">
        <button class="btn btn-primary mt-4 mx-1" asp-controller="Skill" asp-action="AddSkill"> <i class="fa-solid fa-plus mx-2"></i><span>إضافة</span>  </button>
        <button class="btn btn-danger mt-4 mx-1" asp-controller="Individual" asp-action="GetIndividuals"><i class="fa-solid fa-share mx-2"></i><span>رجوع</span>  </button>
        </div>     
        </form>
  </div>
  </div>