@model APSS.Web.Dtos.LandDto
<div class="container-fluid">
    <div class="col-sm-6 d-flex">
        <form class=" mt-3 align-items-center " method="post" asp-action="add">
            <div class="center d-flex justify-content-center mb-3 ">
                <h3 class=" ">
                    Add New Land
                </h3>
            </div>
            <div class="form-outline mb-3">
                <input type="text" asp-for="Name" class="form-control" />
                <label class="form-label" asp-for="Name"></label>
            </div>
            <div class="form-outline mb-3">
                <input type="number" asp-for="Area" class="form-control" />
                <label class="form-label" asp-for="Area"></label>
            </div>
            <!-- Text input for longitude-->
            <div class="form-outline mb-3">
                <input type="number" asp-for="Longitude" class="form-control" />
                <label class="form-label" asp-for="Longitude"></label>
            </div>
            <!-- Text input for latitude-->
            <div class="form-outline mb-3">
                <input type="number" asp-for="Latitude" class="form-control" />
                <label class="form-label" asp-for="Latitude"></label>
            </div>

            <!-- Text input address-->
            <div class="form-outline mb-3">
                <input type="text" asp-for="Address" class="form-control" />
                <label class="form-label" asp-for="Address"></label>
            </div>    <!-- IsUsable input -->
            <div class="form-check-inline">

                <h5 class="inline">IsUsable:</h5>
            </div>
            <div class="form-check form-check-inline">

                <input class="form-check-input hiden" type="radio" name="isUsable" id="yes" value="true" checked />
                <label class="form-check-label" for="yes">Yes</label>
            </div>

            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" value="false" id="no" name="isUsable" />
                <label class="form-check-label" for="no"> No </label>
            </div>

            <br />
            <!-- IsUsed input -->
            <div class="form-check-inline">

                <h5 class="inline"> IsUsed: </h5>
            </div>
            <div class="form-check form-check-inline">

                <input class="form-check-input hiden" type="radio" asp-for="IsUsable" value="true" checked />
                <label class="form-check-label" asp-for="IsUsable">Yes</label>
            </div>

            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="IsUsable" value="false" />
                <label class="form-check-label" asp-for="IsUsable"> No </label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mt-4 col-2">Add</button>
        </form>
    </div>
</div>