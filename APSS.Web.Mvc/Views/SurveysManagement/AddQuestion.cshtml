                        <div class="form-outline form-group" id="">
                            <input type="text" name="selection_three" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                            <label for="selection_three" class="form-label">Selection Three</label>
                        </div>
                    </div>
                    <!--4-->
                    <div class="col-6 mt-2" id="box4">
                        <div class="form-outline form-group" id="">
                            <input type="text" name="selection_four" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                            <label for="selection_four" class="form-label">Selection Four</label>
                        </div>
                    </div>
                    <!--5-->
                    <div class="col-6 mt-2" id="box5">
                        <div class="form-outline form-group" id="">
                            <input type="text" name="selection_five" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                            <label for="selection_five" class="form-label">Selection Five</label>
                        </div>
                    </div>
                    <!-- 6 -->
                    <div class="col-6 mt-2" id="box6">
                        <div class="form-outline form-group" id="">
                            <input type="text" name="selection_six" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
                            <label for="selection_six" class="form-label">Selection Six</label>
                        </div>
                    </div>

                    <!-- 7 -->
                    <div class="col-6 mt-2 " id="box7">
                        <div class="form-outline form-group" id="">
                            <input type="text" name="selection_seven" class="form-control" id="exampleFormControlInput1" placeholder="selection...">
