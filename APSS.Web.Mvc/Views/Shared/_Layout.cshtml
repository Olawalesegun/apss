                                <a class="" href="#" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/resources/user.jpg" alt="" style="width:35px; height:35px" class="rounded-circle border border-2 border-primary">
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item p-3 d-flex justify-content-between" href="#"><span>Logout</span> <span class=""><i class="bi bi-box-arrow-left rotation "></i></span> </a></li>
                                    <li><a asp-controller="AccountManagement" asp-action="AccountDetails" class="dropdown-item p-3 d-flex justify-content-between"><span>Detials</span> <span><i class="bi bi-info-circle "></i></span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- main body -->
            <div class="dashboard-content  px-0 mx-0 ">

                <main class="col-lg-12 mx-auto mx-0 px-0 ">
                    <header class="d-flex    "></header>

                    <div class=" mx-0 px-1">
                        <main role="main" class="mt-1">
                            <partial name="_Notification" />
                            @RenderBody()
                        </main>
                    </div>
                </main>
            </div>
        </div>
    </div>
