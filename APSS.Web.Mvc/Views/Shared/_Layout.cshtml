                    <div class="d-flex justify-content-between d-md-none d-block w-100 ">

                        <!-- media top bar -->

                        <div id="open-btn" class=" d-flex justify-content-between ">
                            <button class="btn px-0  btn-link  open-btn "><i class="fas fa-stream fs-1  "></i></button>

                            <a href="#" class="text-decoration-none text-sm-start overflow-scroll py-1    text-primary  " id="media-system-name" style="word-wrap:break-word">
                                Scan App
                            </a>
                        </div>
                        <div class="d-flex ">

                            <div class="pt-2 px-1">
                                <a href="#" class="text-decoration-none ">
                                    <i class="fal fa-bell fs-1 "></i>
                                </a>
                            </div>
                            <div class=" dropstart pt-2 px-1">
                                <a class="" href="#" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/resources/user.jpg" alt="" style="width:35px; height:35px" class="rounded-circle border border-2 border-primary">
