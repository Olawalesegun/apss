<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class=" mt-3 ">
                    <!-- 2 column puts for the National number and Phome Number-->
                    <div class="center d-flex justify-content-center mb-3 ">
                        <h3 class="text-decoration-underline">
                            Required Infromation
                        </h3>
                    </div>
                    <!-- Text input for user name-->
                    <div class="form-outline mb-4">
                        <input type="tel" id="user_name" name="user_name" class="form-control" />
                        <label class="form-label" for="user_name">Name</label>
                    </div>
                    <div class="form-check-inline">
                        <h5 class="inline">User status:</h5>
                    </div>
                    <!--used -->
                    <div class="form-check form-check-inline">
                        <input class="form-check-input hiden" type="radio" name="used" id="used" value="true" />
                        <label class="form-check-label" for="used">Yes</label>
                    </div>
                    <!--unused -->
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="false" id="unused" name="used" checked />
                        <label class="form-check-label" for="unused"> False </label>
                    </div>
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary w-100 mb-4 mt-4">Add</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>