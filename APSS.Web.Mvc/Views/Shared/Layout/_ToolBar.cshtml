@{
    var currentRoute = Context.GetCurrentRoute();
}

@if (currentRoute is not null && currentRoute is CrudRoute crudRoute)
{
    <nav class="navbar navbar-light bg-light navbar-expand-lg">
        <div class="container-fluid justify-content-between">
            <a class="navbar-brand" href="#">@crudRoute.Name</a>

            <div class=" d-flex gap-2">
                <form class="btn-group" method="get">
                    <input class="form-control" type="search" placeholder="Search" name="query" aria-label="Search">
                    <button type="submit" class="btn btn-secondary">@Icon.Search.Render()</button>
                </form>

                <a class="btn btn-primary" href="@currentRoute.FullPath/Add">@Icon.Plus.Render()</a>
            </div>
        </div>
    </nav>
    <hr class="mt-0" />
}