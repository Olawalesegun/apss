@model APSS.Web.Dtos.ProductExpenseDto

<div class="container-fluid d-flex px-2 my-2">
    <div class="col-sm-12 mx-lg-0 mx-sm-2 col-lg-8">
        <form class=" mt-3 align-items-center needs-validation" method="post" asp-controller="Expenses" asp-action="Add" novalidate>
            <!--  column puts for the Land Product Expense Type -->
            <input type="hidden" asp-for="ProductId" />
            <div asp-validation-summary="ModelOnly"></div>
            <div class=" d-flex  mb-3 ">
                <h3 class="">
                    Add New Expense
                </h3>
            </div>
            <div class=" mb-3">
                <div class="input-group has-validation ">
                    <span class="input-group-text">@@</span>
                    <div class="form-floating flex-grow-1">
                        <input type="text" asp-for="Type" class="form-control" placeholder="Type of Price" aria-describedby="pricetypeValiadtion" />
                        <label class="form-label" asp-for="Type"></label>
                    </div>
                    <span id="pricetypeValiadtion" class="d-block invalid-feedback" asp-validation-for="Type"></span>
                </div>
            </div>
            <div class=" mb-3">
                <div class="input-group has-validation">
                    <span class="input-group-text">$</span>
                    <div class="form-floating flex-grow-1">
                        <input type="number" asp-for="Price" class="form-control" placeholder="Price" aria-describedby="priceValidation" />
                        <label class="form-label" asp-for="Price"></label>
                    </div>
                    <span id="priceValidation" asp-validation-for="Price" class="d-block invalid-feedback"></span>
                </div>
            </div>
            <!-- Submit button -->
            <div class="mt-4 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary btn-block px-5">Add</button>
            </div>
        </form>
    </div>
</div>