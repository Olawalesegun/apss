@model APSS.Web.Dtos.ProductExpenseDto

<div class="card mx-0  border-0">
    <div class="d-inline">
    </div>
    <div class="card-body">
        <div class="d-flex ">

            <h1 class="fw-light">Product Expanse Info</h1>
        </div>
        <table class="table user-view-table m-0 border ">
            <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(i => i.Id)</td>
                    <td>@Model?.Id</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(t => t.Type)</td>
                    <td>@Model?.Type</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(p => p.Price)</td>
                    <td>@Model?.Price</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(c => c.CreatedAt)</td>
                    <td>@Model?.CreatedAt</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(m => m.ModifiedAt)</td>
                    <td>@Model?.ModifiedAt</td>
                </tr>
            </tbody>
        </table>
        <br />
        <div class="d-flex justify-content-end">
            <a class="btn btn-outline-secondary  my-2   mx-1" onclick="history.back()"> <i class="fa-solid fa-angle-left me-2"></i><span> Back </span> </a>
            <a class="btn btn-outline-primary   my-2   mx-1" asp-route-Id="@Model?.Id" asp-controller="Expenses" asp-action="Update"> <i class="fa-solid fa-pen-to-square me-2"> </i><span>Update</span> </a>
            <a class="btn btn-outline-danger   my-2   mx-1" asp-controller="Expenses" asp-action="Delete" asp-route-id="@Model?.Id"> <i class="fa-solid fa-trash-can me-2"></i><span>Delete</span>  </a>
        </div>
    </div>
</div>