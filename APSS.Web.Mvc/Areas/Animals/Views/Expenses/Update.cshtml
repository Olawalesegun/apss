@model APSS.Web.Dtos.ProductExpenseDto

<form class="needs-validation form-group" method="post" action="@Routes.Dashboard.Animals.Expense.Update.FullPath" asp-antiforgery="true" novalidate>
    <div class="modal fade" id="addUserModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUserModalLabel">Add Expense </h5>
                </div>
                <div class="modal-body">
                    <!-- User name -->
                    <!--  column puts for the Land Product Expense Type -->
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class=" mb-3">
                        <div class="input-group has-validation ">
                            <span class="input-group-text">@@</span>
                            <div class="form-floating flex-grow-1">
                                <input type="text" asp-for="Type" class="form-control" placeholder="Type of Price" aria-describedby="pricetypeValiadtion" />
                                <label class="form-label" asp-for="Type"></label>
                            </div>
                            <span id="pricetypeValiadtion" class="d-block invalid-feedback" asp-validation-for="Type"></span>
                        </div>
                    </div>
                    <div class=" mb-3">
                        <div class="input-group has-validation">
                            <span class="input-group-text">$</span>
                            <div class="form-floating flex-grow-1">
                                <input type="number" asp-for="Price" class="form-control" placeholder="Price" aria-describedby="priceValidation" />
                                <label class="form-label" asp-for="Price"></label>
                            </div>
                            <span id="priceValidation" asp-validation-for="Price" class="d-block invalid-feedback"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a type="button" class="btn btn-secondary" href="@Routes.Dashboard.Animals.Products.FullPath">Cancel</a>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts {
<script>

    $(window).on('load', function () {
        $('#addUserModal').modal('show');
    });</script>
}