@model IEnumerable<APSS.Web.Dtos.AnimalGroupDto>
<div class="my-2">
    <div class="row row-cols-1 row-cols-md-2 g-4 ">
        @foreach (var animal in Model)
        {
            <div class="col">
                <div class="card mt-2  shadow">
                    <div class="card-body">
                        <div class="d-flex   align-items-center" style="line-height:40px !important">

                            <i class="fa-solid fa-circle-user fs-1 me-2 " style="padding-left:4px"></i> <h3 style="" class="fw-light">@animal.OwnedBy.Name </h3>
                        </div>
                        <table class="table user-view-table m-0  ">
                            <tbody>
                                <tr class="">
                                    <th class="">@Html.DisplayNameFor(m => m.Type)</th>
                                    <td>@animal.Type </td>
                                </tr>
                                <tr class="">
                                    <th class="">@Html.DisplayNameFor(m => m.Name)</th>
                                    <td>@animal.Name </td>
                                </tr>
                                <tr>
                                    <th> @Html.DisplayNameFor(m => m.Quantity)</th>
                                    <td>@animal.Quantity  </td>
                                </tr>
                                <tr>
                                    <th><label>@Html.DisplayNameFor(m => m.Sex)</label>  </th>
                                    <td> @animal.Sex </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.CreatedAt)  </th>
                                    <td>
                                        @animal.CreatedAt
                                    </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.ModifiedAt) </th>
                                    <td>
                                        @animal.ModifiedAt
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class=" mx-2 d-flex justify-content-end my-3">
                            @Html.ActionLink("Decline", "AnimalConfirm", new { id=animal.Id,value=false },new{@class="btn btn-danger text-white me-2  shadow-0"})
                            @Html.ActionLink("Confirm", "AnimalConfirm", new { id=animal.Id,value=true },new{@class="btn btn-success text-white my-0 shadow-0"})
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>