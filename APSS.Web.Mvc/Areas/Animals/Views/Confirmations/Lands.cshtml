@model LandConfirmationDto

<nav class="navbar navbar-light bg-light navbar-expand-lg">
    <div class="container-fluid justify-content-between">
        <a class="navbar-brand" href="#">Lands</a>

        <div class=" d-flex gap-2">
            <div class="d-flex justify-content-end">
                <div class="btn-group dropstart">
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Action
                    </button>

                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Routes.Dashboard.Animals.Confirmation.FullPath">Animal Group</a></li>
                        <li><a class="dropdown-item" asp-action="Lands" asp-controller="Confirmations">Lands</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>
<hr class="mt-0" />
<div class="my-2 mx-2">
    <div class="row row-cols-1 row-cols-md-2 g-4 ">
        @foreach (var product in @Model.Lands)
        {
            <div class="col">

                <div class="card mt-2  shadow-1">
                    <div class="card-body">
                        <div class="d-flex align-items-center" style="line-height:40px !important">
                            <i class="fa-solid fa-circle-user fs-1 me-2 " style="padding-left:4px"></i>
                            <h3 class="fw-light">
                                @product.OwnedBy.Name
                            </h3>
                        </div>

                        <table class="table user-view-table m-0  ">
                            <tbody>
                                <tr class="">
                                    <th>@Html.DisplayNameFor(m=>m.Lands.First().Name)</th>
                                    <td> @product.Name</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.Lands.First().Area)</th>
                                    <td> @product.Area</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.Lands.First().Address)</th>
                                    <td> @product.Address</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.Lands.First().Latitude)</th>
                                    <td> @product.Latitude</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.Lands.First().IsUsable)</th>
                                    <td> @product.IsUsable</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.Lands.First().ModifiedAt)</th>
                                    <td> @product.ModifiedAt</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.Lands.First().Address)</th>
                                    <td> @product.Address</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.Lands.First().IsUsable)</th>
                                    <td> @product.IsUsable</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.Lands.First().IsUsed)</th>
                                    <td> @product.IsUsed</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="my-3 d-flex justify-content-end">
                            @Html.ActionLink("Decline", "ConfirmLand", new { id=product.Id,value=false },new{@class="btn btn-outline-danger  me-2  shadow-0"})
                            @Html.ActionLink("Confirm", "ConfirmLand", new { id=product.Id,value=true },new{@class="btn btn-success text-white  shadow-0"})
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="row py-3 mt-3 me-2 mx-1  " style="line-height:50px;background-color:lightgray;border-left:4px red solid;margin-left:2px">
    <div class="d-flex justify-content-between">
        <h5 class="fw-600">Land Products</h5>
        <i class="fa-solid fa-tree fa-2x"></i>
    </div>
</div>

<div class="my-2 mx-2">
    <div class="row row-cols-1 row-cols-md-2 g-4 ">
        @foreach (var animal in @Model.Products)
        {
            <div class="col">
                <div class="card mt-2  shadow-1">
                    <div class="card-body">
                        <div class="d-flex   align-items-center" style="line-height:40px !important">

                            <i class="fa-solid fa-circle-user fs-1 me-2 " style="padding-left:4px"></i> <h3 style="" class="fw-light">@animal.Producer.OwnedBy.Name </h3>
                        </div>
                        <table class="table user-view-table m-0  ">
                            <tbody>
                                <tr class="">
                                    <th class="">@Html.DisplayNameFor(m => m.Products.First().CropName)</th>
                                    <td>@animal.CropName </td>
                                </tr>
                                <tr class="">
                                    <th class="">@Html.DisplayNameFor(m => m.Products.First().Category)</th>
                                    <td>@animal.Category </td>
                                </tr>
                                <tr>
                                    <th> @Html.DisplayNameFor(m => m.Products.First().HasGreenhouse)</th>
                                    <td>@animal.HasGreenhouse  </td>
                                </tr>
                                <tr>
                                    <th><label>@Html.DisplayNameFor(m => m.Products.First().IrrigationMethod)</label>  </th>
                                    <td> @animal.IrrigationMethod </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Products.First().IrrigationCount)  </th>
                                    <td>
                                        @animal.IrrigationCount
                                    </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Products.First().IrrigationCount)  </th>
                                    <td>
                                        @animal.IrrigationCount
                                    </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Products.First().IrrigationWaterSource) </th>
                                    <td>
                                        @animal.IrrigationWaterSource
                                    </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Products.First().Fertilizer) </th>
                                    <td>
                                        @animal.Fertilizer
                                    </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Products.First().HarvestStart) </th>
                                    <td>
                                        @animal.HarvestStart
                                    </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Products.First().HarvestEnd) </th>
                                    <td>
                                        @animal.HarvestEnd
                                    </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Products.First().IsGovernmentFunded) </th>
                                    <td>
                                        @animal.IsGovernmentFunded
                                    </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Products.First().ProducedIn) </th>
                                    <td>
                                        @animal.ProducedIn
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class=" mx-2 d-flex justify-content-end my-3">
                            @Html.ActionLink("Decline", "ConfirmProduct", new { id=animal.Id,value=false },new{@class="btn btn-outline-danger  me-2  shadow-0"})
                            @Html.ActionLink("Confirm", "ConfirmProduct", new { id=animal.Id,value=true },new{@class="btn btn-success text-white my-0 shadow-0"})
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>