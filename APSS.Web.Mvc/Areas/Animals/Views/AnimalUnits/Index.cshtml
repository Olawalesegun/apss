@model IEnumerable<APSS.Web.Dtos.AnimalProductUnitDto>

<div class="  p-2  col-ms-12  my-0 mt-2  rounded ml-2 " id="">
    <div class="col-sm-12  ">

        <div class=" mt-3 bg-light table-rsponsive mb-3 table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar ">

            <table class="table table-hover table-responsive table-bordered h-100  table-striped mb-0 " style="height:400px" id="myTable">

                <thead>
                    <tr class="header  bg-fixed " style="border-bottom:2px #5C5C5C solid;">
                        <th class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.Id)</th>
                        <th class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.Name)</th>
                        <th class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.CreatedAt)</th>
                        <th class=" text-capitalize align-middle">@Html.DisplayNameFor(m=>m.ModifiedAt)</th>
                        <th style="width:20px" class=" text-capitalize align-middle"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-top">

                            <td class="text-break text-capitalize align-middle">@item.Id</td>
                            <td class="text-break text-capitalize align-middle"> @item.Name</td>

                            <td class="text-break text-capitalize align-middle">
                                @item.CreatedAt
                            </td>
                            <td class="text-break text-capitalize align-middle">
                                @item.ModifiedAt
                            </td>
                            <td class="align-middle center">

                                <div class=" dropend">
                                    <a class="" role="button" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="dropdown-item" asp-route-id="@item.Id" asp-controller="AnimalUnits" asp-action="Delete"><div class="d-flex justify-content-between"> <span>Delete</span>  <span><i class="fa-solid fa-trash-can"></i> </span> </div></a></li>
                                        <li class="">
                                            <a class="dropdown-item " asp-route-id="@item.Id" asp-controller="AnimalUnits" asp-action="Update">
                                                <div class="d-flex justify-content-between"> <span>Update </span>  <span><i class="fa-solid fa-pen-to-square"></i> </span> </div>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex container justify-content-center">
        <div class=" col-sm-12 px-sm-2 col-lg-4 col-md-4">
            <ul class="pagination d-flex justify-content-between">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">6</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </div>
    </div>
</div>

@section scripts{
<script>

     $(document).ready(function(){
    $(".sidebar ul li.active").removeClass('active');
     $("#dataManagement").addClass('active');
    });

        $(document).ready(function(){
         $(".scrollmenu a.MediaActive").removeClass('MediaActive');
         $("#animalProductMedia").addClass('MediaActive')

     });
      document.getElementById("nav-system-name").innerHTML="Emoplyees Management";
    document.getElementById("media-system-name").innerHTML=" Emoplyees Management ";

       $("#animalGroups").removeClass('actives');
         $("#units").addClass('actives');
</script>
    }