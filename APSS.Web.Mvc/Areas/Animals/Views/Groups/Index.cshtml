@model IEnumerable<APSS.Web.Dtos.AnimalGroupDto>
<!--table-->
@{
    ViewData["controllar"] = "AnimalGroups";
    ViewData["action"] = "Index";
}
<partial name="_dataNavBar" />

<div class="   p-2  col-ms-12  my-0 mt-2  rounded ml-2 needs-validation " id="">

    <div class="col-sm-12  ">

        @if (ViewBag.SearchResult != null)
        {
            <span class="text-danger"></span>
            <div class="alert alert-warning alert-dismissible fade show">
                <strong>Warning!</strong> Not found Result <span class="text-danger">@ViewBag.SearchResult</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class=" mt-3 bg-light table-rsponsive mb-3 table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar" id="">
            <table class="table table-hover table-responsive table-bordered   table-striped  " id="myTable">

                <thead class="table-light">
                    <tr class="header  bg-fixed " style="border-bottom:2px #5C5C5C solid;">
                        <th class=" fw-bold align-middle"> #</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(A=>A.Type)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(A=>A.Name)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(A=>A.Quantity)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(A=>A.Sex)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(A=>A.CreatedAt)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(A=>A.ModifiedAt)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(A=>A.IsConfirmed)</th>
                        <th style="width:20px" class="fw-bold align-middle"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {

                        <tr>

                            <td>@item.Id</td>
                            <td>@item.Type</td>
                            <td>@item.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Sex</td>
                            <td>@item.CreatedAt</td>
                            <td>@item.ModifiedAt</td>

                            <td class="text-break text-capitalize text-center "> <div class=""><label class="  @(item.IsConfirmed==true?"fa-solid fa-circle-check text-success fa-xl":"fa-solid fa-circle-xmark text-danger fa-xl")"></label></div> </td>

                            <td class="align-middle center">
                                <div class=" dropend">
                                    <a class="" href="#" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-route-id="@item.Id" asp-controller="Groups" asp-action="Details"><div class="d-flex justify-content-between"> <span>Details</span>  <span><i class="fa-solid fa-info"></i> </span> </div> </a></li>
                                        <li><a class="dropdown-item btn-link" asp-route-id="@item.Id" asp-controller="Groups" asp-action="Delete"><div class="d-flex justify-content-between"> <span>Delete</span>  <span><i class="fa-solid fa-trash-can"></i> </span> </div></a></li>
                                        <li><a class="dropdown-item btn-link" asp-route-id="@item.Id" asp-controller="Groups" asp-action="Edit"><div class="d-flex justify-content-between"> <span>Update</span>  <span><i class="fa-solid fa-pen-to-square mx-1"></i> </span> </div></a></li>
                                        <li class="">
                                            <a class="dropdown-item text-decoration-none" role="button" asp-route-Id="@item.Id" asp-controller="Products" asp-action="Add">

                                                <div class="d-flex justify-content-between"> <span>Add Product</span>  <span><i class="fa-solid fa-plus"></i> </span> </div>
                                            </a>
                                        </li>
                                        <li><a class="dropdown-item btn-link" asp-route-id="@item.Id" asp-controller="Confirmations" asp-action="ConfirmAnimalGroup"><div class="d-flex justify-content-between"> <span>Confirm</span>  <span><i class="fa-solid fa-flag-checkered mx-1"></i> </span> </div></a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex container justify-content-center">
        <div class=" col-sm-12 px-sm-2 col-lg-4 col-md-4">
            <ul class="pagination d-flex justify-content-between">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">6</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </div>
    </div>
</div>
<!-- canvas body for create-->
@section scripts{
<script>

     $(document).ready(function(){
    $(".sidebar ul li.active").removeClass('active');
     $("#dataManagement").addClass('active');
    });
     document.getElementById("nav-system-name").innerHTML="Data Management";
    document.getElementById("media-system-name").innerHTML=" Data Management ";

       $("#animalProducts").removeClass('actives');
       $("#lands").removeClass('actives');
       $("#landProducts").removeClass('actives');
        $("#confirmation").removeClass('actives');
        $("#units").removeClass('actives');
       $("#animalGroups").addClass('actives');
</script>
    }