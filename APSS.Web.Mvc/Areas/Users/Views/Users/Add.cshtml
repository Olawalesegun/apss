@model APSS.Web.Dtos.UserDto
@await Html.PartialAsync("_accountNavBar")

<div class="">
    <div class="row col-lg-8 mx-0 col-sm-12 m-sm-2 rounded  ">
        <form class=" mt-3 needs-validation form-group" asp-controller="Users" asp-action="Add" novalidate>
            <div asp-validation-summary="ModelOnly"></div>
            <!-- 2 column puts for the National number and Phome Number-->
            <div class="center d-flex  mb-3 ">
                <h3 class="">
                    Add New Area
                </h3>
            </div>
            <!-- Text input for user name-->
            <div class=" mb-4 position-relative  ">
                <div class="input-group">
                    <span class="input-group-text">@@</span>
                    <div class="form-floating flex-grow-1">
                        <input type="text" id="user_name" placeholder="Name" asp-for="Name" class="form-control" required />
                        <label class="" asp-for="Name"></label>
                        <div class="invalid-tooltip">
                            Please Enter Area Name
                        </div>
                    </div>
                </div>
            </div>

            <div class="">
                <h5 class="">
                    <label asp-for="userStatus"></label>
                </h5>
            </div>
            <!--used -->
            @foreach (var item in Enum.GetValues(typeof(APSS.Domain.Entities.UserStatus)))
            {
                if (@item.Equals(UserStatus.Terminated))
                {

                }
                else
                {
                    <div class="form-check form-check-inline mx-1 ">
                        <input class="form-check-input hiden" type="radio" asp-for="userStatus" id="used" value="@Convert.ToInt32(item)" />
                        <label class="form-check-label">@item.ToString()</label>
                    </div>
                }
            }
            <div class="mb-4 d-flex justify-content-end">

                <a onClick="history.go(-1); return false;" class="btn text-decoration-none btn-link px-5 my-4 mx-3" style="background-color:#DCEEFB">Cancel</a>
                <button type="submit" class="btn btn-primary px-5 mb-4 mt-4">Add</button>
            </div>
            <!-- Submit button -->
        </form>
    </div>
</div>