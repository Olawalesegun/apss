@using APSS.Domain.Entities
@model APSS.Web.Dtos.UserDto
@await Html.PartialAsync("_accountNavBar")
<div class="container-fluid ">
    <div class="col-sm-5 mx-0 col-lg-8">
        <form class=" mt-3 " method="post" asp-controller="Users" asp-action="Update">
            <div asp-validation-summary="ModelOnly"></div>
            <!-- 2 column puts for the National number and Phome Number-->
            <div class=" d-flex mb-3  " style="line-height:35px;">
                <h3 class="">
                    Edit Area Information
                </h3>
            </div>
            <!-- Text input for user name-->
            <div class=" mb-4 position-relative  ">
                <div class="input-group">
                    <span class="input-group-text">@@</span>
                    <div class="form-floating col">
                        <input type="text" id="user_name" placeholder="Name" asp-for="Name" class="form-control" required />
                        <label class="" asp-for="Name"></label>
                        <div class="invalid-tooltip">
                            Please Enter Area Name
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-inline">
                <h5 class="inline">
                    <label asp-for="userStatus"></label>
                </h5>
            </div>
            <!--used -->
            @foreach (var item in Enum.GetValues<UserStatus>())
            {
                if (@Model.userStatus == @item)
                {
                    <div class="form-check form-check-inline mx-1 ">
                        <input class="form-check-input hiden" type="radio" asp-for="userStatus" id="used" value="@item" checked />
                        <label class="form-check-label">@item</label>
                    </div>
                }
                else
                {
                    <div class="form-check form-check-inline mx-1 ">
                        <input class="form-check-input hiden" type="radio" asp-for="userStatus" id="used" value="@item" />
                        <label class="form-check-label">@item</label>
                    </div>
                }
            }
            <div class=" d-flex justify-content-end">
                <!-- Submit button -->
                <a onClick="history.go(-1); return false;" class="btn btn-link text-decoration-none  px-5 my-4 mx-2" style="background-color:#DCEEFB">Cancel</a>
                <button type="submit" class="btn btn-primary px-5 my-4">Edit</button>
            </div>
        </form>
    </div>
</div>

@section scripts{
<script>
        $(document).ready(function(){
    $(".sidebar ul li.active").removeClass('active');
    $("#accountManagement").addClass('active');
    });

     document.getElementById("nav-system-name").innerHTML="Employees Management ";
    document.getElementById("media-system-name").innerHTML="Employees Management";
    $(".scrollmenu a").on('click',function(){
        $(".scrollmenu a.MediaActive").removeClass('MediaActive');

    });
    $(".manage-ment ul li a").on('click',function(){
        $(".scrollmenu a.actives").removeClass('actives');
        $("#accounts").addClass('actives');

    });
    $(".scrollmenu ul li a").on('click',function(){
        $(".scrollmenu ul li a.actives").removeClass('actives');
        $("#accounts").addClass('actives');
    });
    $("#userMedia").addClass("actives")
</script>
}