@model APSS.Web.Dtos.UserDto
<div class="card mt-2 border-0">
    <div class="card-body">
        <h4 class="mb-4"> Erea Information </h4>
        <table class="table user-view-table m-0 border">
            <tbody>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m=>m.Name) </th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th class="align-middle"> @Html.DisplayNameFor(m=>m.CreatedAt) </th>
                    <td>@Model.CreatedAt</td>
                </tr>
                <tr>
                    <th class="align-middle"> @Html.DisplayNameFor(m=>m.ModifiedAt) </th>
                    <td>@Model.ModifiedAt</td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m=>m.userStatus)  </th>

                    @{
                        if (@Model.userStatus == APSS.Domain.Entities.UserStatus.Active)
                        {
                            <td>
                                <span class="fa fa-check text-primary mx-1"></span> @Model.userStatus
                            </td>
                        }

                        else
                        {
                            <td>
                                @Model.userStatus
                            </td>
                        }
                    }
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m=>m.AccessLevel) </th>
                    <td>@Model.AccessLevel</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="table-responsive">
        <div cllass="d-inline  ">
            <div class="mx-lg-2 mx-sm-1 mx-sm-1 my-1 d-flex justify-content-between">
                <div class="">
                    <a class="btn btn-link text-decoration-none mx-1 my-1" asp-route-id="@Model.Id" asp-controller="Accounts" asp-action="UserAccounts"> <i class="fa-solid fa-users mx-2"></i><span>Employees </span>  </a>
                </div>
                <div class="d-flex">
                    <a class="btn btn-outline-primary mx-1 my-1" asp-route-id="@Model.Id" asp-controller="Users" asp-action="EditUser"> <i class="fa-solid fa-pen-to-square mx-2"> </i><span>Edit</span> </a>
                    <a class="btn btn-danger mx-1 my-2" asp-route-id="@Model.Id" asp-controller="Users" asp-action="DeleteUser"> <i class="fa-solid fa-trash-can mx-2"></i><span>Delete</span>  </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
<script>
        $(document).ready(function(){
    $(".sidebar ul li.active").removeClass('active');
    $("#accountManagement").addClass('active');
    });

     document.getElementById("nav-system-name").innerHTML="Employees Management ";
    document.getElementById("media-system-name").innerHTML="Employees Management";
    $(".scrollmenu a").on('click',function(){
        $(".scrollmenu a.MediaActive").removeClass('MediaActive');

    });
    $(".manage-ment ul li a").on('click',function(){
        $(".scrollmenu a.actives").removeClass('actives');
        $("#accounts").addClass('actives');

    });
    $(".scrollmenu ul li a").on('click',function(){
        $(".scrollmenu ul li a.actives").removeClass('actives');
        $("#accounts").addClass('actives');
    });
    $("#userMedia").addClass("actives")
</script>
}