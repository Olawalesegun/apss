@model ProductExpenseDto
@{
    ViewData["title"] = "Add Product Expense Page";
}
<div class="container-fluid">
    <form class="needs-validation form-group" method="post" action="@Routes.Dashboard.Lands.Expenses.Add.FullPath" asp-antiforgery="true" novalidate>
        <div class="d-flex mt-5">
        </div>
        <div class="modal fade" id="addUserModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addUserModalLabel">Add a new Expense</h5>
                    </div>
                    <div class="modal-body">
                        <!--  column puts for the Land Product Expense Type -->
                        <input type="hidden" asp-for="ProductId" />
                        <div class="center d-flex justify-content-center mb-3 ">
                            <h3 class=" ">
                                Add a New Expense
                            </h3>
                        </div>
                        <div class="input-group mb-3 has-Validation">
                            <span class="input-group-text">@@</span>
                            <div class="form-floating col">
                                <input type="text" asp-for="Type" class="form-control" placeholder=" " aria-describedby="typeValidation" required />
                                <label class="form-label" asp-for="Type"></label>
                            </div>
                            <span id="typeValidation" class="d-block invalid-feedback" asp-validation-for="Type"></span>
                        </div>
                        <input type="hidden" asp-for="ProductId" />
                        <div class=" mb-3">
                            <div class="input-group has-validation">
                                <span class="input-group-text">@@</span>
                                <div class="form-floating col">
                                    <input type="number" asp-for="Price" class="form-control" placeholder=" " aria-describedby="priceValidation" required />
                                    <label class="form-label" asp-for="Price"></label>
                                </div>
                                <span id="priceValidation" class="d-block invalid-feedback" asp-validation-for="Price"></span>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <a type="button" class="btn btn-secondary" href="@Routes.Dashboard.Lands.Expenses.FullPath">Cancel</a>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section scripts {
<script>

    $(window).on('load', function () {
        $('#addUserModal').modal('show');
    });
</script>
    }