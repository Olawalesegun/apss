@model APSS.Web.Dtos.ProductExpenseDto
@{
    ViewData["title"] = "Delete Expense Page";
}

<div class="card mt-2">
    <div class="card-body">
        <div class="d-flex "><h5>Confirme Deletion Proccess</h5> </div>
        <table class="table user-view-table m-0  ">
            <tbody style="font-size:14px">
                <tr class="">
                    <td>@Html.DisplayNameFor(t => t.Type)</td>
                    <td>@Model?.Type</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(p => p.Price)</td>
                    <td>@Model?.Price</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(p => p.CreatedAt)</td>
                    <td>@Model?.CreatedAt</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(p => p.ModifiedAt)</td>
                    <td>@Model?.ModifiedAt</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(p => p.SpentOn.AddedBy.Name)</td>
                    <td>@Model?.SpentOn.AddedBy.Name</td>
                </tr>
            </tbody>
        </table>
        <br />
        <div class=" d-inline pt-2">
            <a class="btn btn-danger btn-rounded  " asp-route-Id="@Model?.Id" asp-area="lands" asp-controller="Expenses" asp-action="DeletePost">Confirme</a>
            <a class="btn btn-primary btn-rounded mx-3" asp-area="lands" asp-controller="Expenses" asp-action="Index">Back</a>
        </div>
    </div>
</div>