@model ProductExpenseDto
@{
    ViewData["title"] = "Delete Expense Page";
}

<div class="card mt-2">
    <div class="card-body">
        <div class="d-flex "><h5>Confirme Deletion Proccess</h5> </div>
        <table class="table user-view-table m-0  ">
            <tbody style="font-size:14px">
                <tr class="">
                    <td>@Html.DisplayNameFor(t => t.Type)</td>
                    <td>@Model?.Type</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(p => p.Price)</td>
                    <td>@Model?.Price</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(p => p.CreatedAt)</td>
                    <td>@Model?.CreatedAt</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(p => p.ModifiedAt)</td>
                    <td>@Model?.ModifiedAt</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(p => p.SpentOn)</td>
                    <td>@Model?.SpentOn.Id</td>
                </tr>
            </tbody>
        </table>
        <br />
        <div class=" d-inline pt-2">
            <a class="btn btn-danger" href="@(Routes.Dashboard.Lands.Expenses.DeletePost)/@Model!.Id">Confirm</a>
            <a onClick="history.go(-1); return false;" class="btn btn-link   mx-2 text-decoration-none" style="background-color:#DCEEFB">Cancel</a>
            @*<a class="btn btn-primary btn-rounded mx-3" href="@Routes.Dashboard.Lands.Lands.FullPath">Back</a>*@
        </div>
    </div>
</div>