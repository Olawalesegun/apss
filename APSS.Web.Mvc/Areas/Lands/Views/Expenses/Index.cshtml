@model IEnumerable<ProductExpenseDto>
<partial name="_dataNavBar" />

<div class="   p-2  col-ms-12  my-0 mt-2  rounded ml-2 needs-validation " id="table">
    <form class="row d-flex justify-content-between  d-inline mb-3 ">
        <div class=" mb-3 col-sm  d-flex">
            <div class="input-group">
                <button type="submit" class="btn btn-primary ">
                    <i class="fas fa-search"></i>
                </button>
                <input type="search" class="form-control" id="search" placeholder="Search..." name="searchString" onkeyup="searchTable()" required />
            </div>
        </div>
        <div class="col-sm-2 col-lg-1 mb-2 ">

            <select class="form-select " id="searchby">
                <option selected>20</option>
                <option value="1">40</option>
                <option value="2">80</option>
                <option value="3">100</option>
            </select>
        </div>
        <div class="col-sm mb-3 ">

            <select class="form-select " id="searchby" name="searchBy">
                <option selected>Search By</option>
                <option value="1">@Html.DisplayNameFor(t => t.Type)</option>
                <option value="2">@Html.DisplayNameFor(i => i.Id)</option>
                <option value="3">@Html.DisplayNameFor(p => p.Price)</option>
            </select>
        </div>
    </form>

    <div class="col-sm-12  ">

        <div class=" mt-3 bg-light table-rsponsive mb-3 table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar" id="">
            <table class="table table-hover table-responsive table-bordered   table-striped  " id="sortTable">

                <thead>
                    <tr class="header  bg-fixed " style="border-bottom:2px #5C5C5C solid;">
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(i => i.Id)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(t => t.Type)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(p => p.Price)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(p => p.SpentOn)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(p => p.CreatedAt)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(p => p.ModifiedAt)</th>
                        <th style="width:20px;" class="fw-bold align-middle"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model!)
                    {
                        <tr>
                            <td class="text-break text-capitalize align-middle">@item.Id</td>
                            <td class="text-break text-capitalize align-middle">@item.Type</td>
                            <td class="text-break text-capitalize align-middle">@item.Price</td>
                            <td class="text-break text-capitalize align-middle">@item.SpentOn.AddedBy.Name</td>
                            <td class="text-break text-capitalize align-middle">@item.CreatedAt</td>
                            <td class="text-break text-capitalize align-middle">@item.ModifiedAt</td>
                            <td class="align-middle center">
                                <div class=" dropend">
                                    <a class="" href="#" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="Lands" asp-controller="Expenses" asp-action="Update" asp-route-id="@item.Id"><div class="d-flex justify-content-between"> <span>Update</span>  <span><i class="fa-solid fa-pen-to-square mx-1"></i> </span> </div></a></li>
                                        <li><a class="dropdown-item" asp-area="Lands" asp-controller="Expenses" asp-action="Delete" asp-route-id="@item.Id"><div class="d-flex justify-content-between"> <span>Delete</span>  <span><i class="fa-solid fa-trash-can"></i> </span> </div></a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <nav aria-label="Page navigation example" class="float-left pl-5">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
@section scripts{
<script>
     document.getElementById("nav-system-name").innerHTML="Data Management";
    document.getElementById("media-system-name").innerHTML="Data Management";
       $("#landProducts").removeClass('actives');
       $("#animalGroups").removeClass('actives');
    $("#animalProducts").removeClass('actives');
    $("#lands").addClass('actives');
</script>
}