@model LandProductUnitDto
@{
    ViewData["title"] = "Add Unit Page";
}

<form class="needs-validation form-group" method="post" action="@Routes.Dashboard.Lands.Units.Add.FullPath" asp-antiforgery="true" novalidate>
    <div class="d-flex mt-5">
    </div>
    <div class="modal fade" id="addUserModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUserModalLabel">Add a new Unit</h5>
                </div>
                <div class="modal-body">
                    <!--  column puts for the Land Product Expense Type -->
                    <div class="center d-flex justify-content-center mb-3 ">
                        <h3 class=" ">
                            Add new Unit
                        </h3>
                    </div>
                    <div class=" mb-3">
                        <div class="input-group has-validation">
                            <span class="input-group-text">@@</span>
                            <div class="form-floating col">
                                <input type="text" asp-for="Name" class="form-control" placeholder=" " aria-describedby="nameValidation" required />
                                <label class="form-label" asp-for="Name"></label>
                            </div>
                            <span id="nameValidation" class="d-block invalid-feedback" asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a type="button" class="btn btn-secondary" href="@Routes.Dashboard.Lands.Units.FullPath">Cancel</a>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts {
<script>

    $(window).on('load', function () {
        $('#addUserModal').modal('show');
    });
</script>
}