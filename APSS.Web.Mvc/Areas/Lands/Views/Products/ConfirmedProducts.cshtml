@model IEnumerable<LandProductDto>

<div class="my-2">
    <div class="row row-cols-1 row-cols-md-2 g-4 ">
        @foreach (var product in @Model!)
        {
            <div class="col">

                <div class="card mt-2  shadow">
                    <div class="card-body">
                        <div class="d-flex align-items-center" style="line-height:40px !important">
                            <i class="fa-solid fa-circle-user fs-1 me-2 " style="padding-left:4px"></i>
                            <h3 class="fw-light">
                                @product.AddedBy.Name
                            </h3>
                        </div>

                        <table class="table user-view-table m-0  ">
                            <tbody style="font-size:14px">
                                <tr class="">
                                    <th>@Html.DisplayNameFor(n => n.CropName)</th>
                                    <td> @product.CropName</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(a => a.Category)</th>
                                    <td> @product.Category</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(a => a.Producer)</th>
                                    <td> @product.Producer.Name</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(a => a.Unit)</th>
                                    <td> @product.Unit.Name</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(e => e.ProducedIn)</th>
                                    <td> @product.ProducedIn</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.CreatedAt)</th>
                                    <td> @product.CreatedAt</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(m=>m.ModifiedAt)</th>
                                    <td> @product.ModifiedAt</td>
                                </tr>
                            </tbody>
                        </table>
                        <br />
                        <div class="table-responsive  d-flex justify-content-end">
                            @Html.ActionLink("Decline","ConfirmProduct", "Products", new { id=product.Id,value=false },new{@class="btn btn-danger text-white  shadow-0"})
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>