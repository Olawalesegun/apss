@model CrudViewModel<LandProductDto>
<div class="aling" id="loader"></div>

<div class="   p-2  col-ms-12  my-0 mt-2  rounded ml-2 needs-validation " id="table">
    <div class="col-sm-12  ">

        <div class=" mt-3 bg-light table-rsponsive mb-3 table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar" id="">
            <table class="table table-hover table-responsive table-bordered   table-striped  " id="sortTable">

                <thead>
                    <tr class="header  bg-fixed " style="border-bottom:2px #5C5C5C solid;">
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(i => i.First().Id)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(n => n.First().CropName)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(h => h.First().HarvestStart)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(h => h.First().HarvestEnd)</th>
                        <th style="width:20px;" class="fw-bold align-middle"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model!)
                    {
                        <tr>

                            <td class="text-break text-capitalize align-middle">@item.Id</td>
                            <td class="text-break text-capitalize align-middle">@item.CropName</td>
                            <td class="text-break text-capitalize align-middle">@item.HarvestStart</td>
                            <td class="text-break text-capitalize align-middle">@item.HarvestEnd </td>
                            <td class="align-middle center">
                                <div class=" dropdown">
                                    <a href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                        @Icon.Bars.Render()
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item justified-content" href="@(Routes.Dashboard.Lands.Products.Details)/@item.Id">
                                                Details @Icon.Info.Render()
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item justified-content" href="@(Routes.Dashboard.Lands.Products.Update)?id=@item.Id">
                                                Update @Icon.Pen.Render()
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item justified-content" onclick="showDeletionModal('Are you sure you want to delete Product `@item.CropName`?', @item.Id)">
                                                Delete @Icon.TrashCan.Render()
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item justified-content" href="@(Routes.Dashboard.Lands.Expenses.Add.FullPath)?id=@item.Id">
                                                Add Expense @Icon.Plus.Render()
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <nav aria-label="Page navigation example" class="float-left pl-5">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
@await Html.DeleteDialogAsync()