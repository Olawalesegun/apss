@model LandDto

<form class="needs-validation form-group" method="post" action="@Routes.Dashboard.Lands.Lands.Update.FullPath" asp-antiforgery="true" novalidate>
    <div class="d-flex mt-5">
    </div>
    <div class="modal fade" id="addUserModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUserModalLabel">Update Land</h5>
                </div>
                <div class="modal-body">
                    <!-- User name -->
                    <div asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="input-group mb-3 has-validation">
                        <span class="input-group-text">@@</span>
                        <div class="form-floating col">
                            <input type="text" asp-for="Name" class="form-control" placeholder=" " aria-describedby="NameValidation" required />
                            <label class="form-label" asp-for="Name"></label>
                        </div>
                        <span id="NameValidation" class="d-block invalid-feedback" asp-validation-for="Name"></span>
                    </div>
                    <div class=" mb-3">
                        <div class="input-group has-validation">
                            <span class="input-group-text">@@</span>
                            <div class="form-floating col">
                                <input type="number" asp-for="Area" class="form-control" placeholder="area" aria-describedby="areaValidation" required />
                                <label class="form-label" asp-for="Area"></label>
                            </div>
                            <span id="areaValidation" class="d-block invalid-feedback" asp-validation-for="Area"></span>
                        </div>
                    </div>
                    <div class=" mb-3">
                        <div class="input-group has-validation">
                            <span class="input-group-text">@@</span>
                            <div class="form-floating col">
                                <input type="number" asp-for="Longitude" class="form-control" placeholder="" aria-describedby="longitudeValidation" required />
                                <label class="form-label" asp-for="Longitude"></label>
                            </div>
                            <span id="longitudeValidation" class="d-block invalid-feedback" asp-validation-for="Longitude"></span>
                        </div>
                    </div>
                    <div class=" mb-3">
                        <div class="input-group has-validation">
                            <span class="input-group-text">@@</span>
                            <div class="form-floating col">
                                <input type="number" asp-for="Latitude" class="form-control" placeholder="" aria-describedby="latitudeValidation" required />
                                <label class="form-label" asp-for="Latitude"></label>
                            </div>
                            <span id="latitudeValidation" class="d-block invalid-feedback" asp-validation-for="Latitude"></span>
                        </div>
                    </div>
                    <div class=" mb-3">
                        <div class="input-group has-validation">
                            <span class="input-group-text">@@</span>
                            <div class="form-floating col">
                                <input type="text" asp-for="Address" class="form-control" placeholder="" aria-describedby="addressValidation" required />
                                <label class="form-label" asp-for="Address"></label>
                            </div>
                            <span id="addressValidation" class="d-block invalid-feedback" asp-validation-for="Address"></span>
                        </div>
                    </div>
                    <!-- IsUsable input -->
                    <div class="form-check form-check-inline">

                        <input class="form-check-input hiden" asp-for="IsUsed" type="checkbox" value="true" />
                        <label class="form-check-label" asp-for="IsUsed"></label>
                    </div>

                    <br />
                    <!-- IsUsed input -->
                    <div class="form-check form-check-inline">

                        <input class="form-check-input hiden" type="checkbox" asp-for="IsUsable" value="true" />
                        <label asp-for="IsUsable"> </label>
                    </div>

                    <div class="modal-footer">
                        <a type="button" class="btn btn-secondary" href="@Routes.Dashboard.Lands.Lands.FullPath">Cancel</a>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts {
<script>

    $(window).on('load', function () {
        $('#addUserModal').modal('show');
    });
</script>
}