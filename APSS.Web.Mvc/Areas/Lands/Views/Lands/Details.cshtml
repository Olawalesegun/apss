@model APSS.Web.Dtos.LandDto
@{
    ViewData["Title"] = "Land Information";
}

<div class="card mt-2">
    <div class="d-inline">
    </div>
    <div class="card-body">
        <div class="d-flex ">

            <i class="fa-solid fa-caret-left fs-1 " style="padding-left:3px"></i> <h3>Land Information</h3>
        </div>
        <table class="table user-view-table m-0 t ">
            <tbody>
                <tr class="">
                    <td>@Html.DisplayNameFor(m => m.Name)</td>
                    <td>@Model?.Name</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.Address)</td>
                    <td>@Model?.Address</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.Area)</td>
                    <td>@Model?.Area</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.IsUsable)</td>
                    <td>@Model?.IsUsable</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.IsUsed)</td>
                    <td>@Model?.IsUsed</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.IsConfirmed)</td>
                    <td>@Model?.IsConfirmed</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.CreatedAt)</td>
                    <td>@Model?.CreatedAt</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.ModifiedAt)</td>
                    <td>@Model?.ModifiedAt</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(c => c.OwnedBy)</td>
                    <td>@Model?.OwnedBy.Name</td>
                </tr>
            </tbody>
        </table>
        <br />
        <div cllass="d-inline pt-2">
            <a class="btn btn-primary-danger btn-rounded  my-2 bg-white text-dark text-decoration-none mx-1" action="@Routes.Dashboard.Lands.FullPath"> <i class="fa-solid fa-share mx-2"></i><span> Back </span> </a>
            <a class="btn btn-primary-danger btn-rounded  my-2 bg-white text-dark text-decoration-none mx-1" asp-area="Lands" asp-route-Id="@Model?.Id" asp-controller="Products" asp-action="add"> <i class="fa-solid fa-plus mx-2"></i><span> Add Product </span> </a>
            <a class="btn btn-primary-danger btn-rounded  my-2 bg-white text-dark text-decoration-none mx-1" asp-area="Lands" asp-route-Id="@Model?.Id" asp-controller="Products" asp-action="GetLandProducts"><i class="fa-solid fa-angle-down"></i><span class="">All Land Products </span> </a>
            <a class="btn btn-primary-danger btn-rounded  my-2 bg-white text-dark text-decoration-none mx-1" asp-area="Lands" asp-route-Id="@Model?.Id" asp-controller="Lands" asp-action="Update"> <i class="fa-solid fa-pen-to-square mx-2"> </i><span>Update</span> </a>
            <a class="btn btn-primary-danger btn-rounded  my-2 bg-white text-dark text-decoration-none mx-1" asp-area="Lands" asp-route-Id="@Model?.Id" asp-controller="Lands" asp-action="Delete"> <i class="fa-solid fa-trash-can mx-2"></i><span>Delete</span>  </a>
        </div>
        @*<a id="III" class="btn text-primary shadow-0 btn-link text-decoration-none"><span class=""><i class="fa-solid fa-angles-left"></i></span> المنتجات</a>*@
    </div>
</div>