@model LandDto
@{
    ViewData["Title"] = "Land Information";
}

<div class="card mt-2">
    <div class="d-inline">
    </div>
    <div class="card-body">
        <div class="d-flex ">

            <i class="fa-solid fa-caret-left fs-1 " style="padding-left:3px"></i> <h3>Land Information</h3>
        </div>
        <table class="table user-view-table m-0 t ">
            <tbody>
                <tr class="">
                    <td>@Html.DisplayNameFor(m => m.Name)</td>
                    <td>@Model?.Name</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.Address)</td>
                    <td>@Model?.Address</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.Area)</td>
                    <td>@Model?.Area</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.IsUsable)</td>
                    <td>@Model?.IsUsable</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.IsUsed)</td>
                    <td>@Model?.IsUsed</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.IsConfirmed)</td>
                    <td>@Model?.IsConfirmed</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.CreatedAt)</td>
                    <td>@Model?.CreatedAt</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(a => a.ModifiedAt)</td>
                    <td>@Model?.ModifiedAt</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(c => c.OwnedBy)</td>
                    <td>@Model?.OwnedBy.Name</td>
                </tr>
            </tbody>
        </table>
        <br />
        <div class="table-responsive">
            <div cllass="d-inline  ">
                <div class="mx-lg-2 mx-sm-1 mx-sm-1 my-1 d-flex justify-content-between">
                    <div class="">
                        <a class="btn btn-link text-decoration-none mx-1 " href="@(Routes.Dashboard.Lands.Products.Add)/@Model!.Id"><span>@Icon.Plus.Render() Add Product </span>  </a>
                        <a class="btn btn-link text-decoration-none mx-1 " href="@(Routes.Dashboard.Lands.Products.GetAll)/@Model!.Id"><span>@Icon.Seeding.Render() Products</span>  </a>
                    </div>
                    <div class="d-flex">
                        <a class="btn btn-outline-primary mx-1 " href="@(Routes.Dashboard.Lands.Lands.Update.FullPath)/@Model!.Id">@Icon.Pen.Render()<span>Edit</span> </a>
                        <a class="btn btn-danger mx-1 " href="@(Routes.Dashboard.Lands.Lands.Delete.FullPath)/@Model!.Id">@Icon.TrashCan.Render()<span>Delete</span>  </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>