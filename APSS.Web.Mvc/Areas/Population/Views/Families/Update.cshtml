@model FamilyEditForm

<div class="container-fluid px-3 py-3 mx-4 my-1">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4 > Update Family </h4>
        </div>

        <form class=" mt-3" method="post" action="@Routes.Dashboard.Population.Families.Update" asp-antiforgery="true">
            <input asp-for="Id" type="number" hidden/>
            <div class="input-group has-validation mb-3">
                <span class="input-group-text"><i class="fa-solid fa-people-roof"></i></span>
                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Name" asp-for="Name" >
                    <label asp-for="Name"></label>
                </div>
                <span  class="d-block invalid-feedback" asp-validation-for="Name"></span>
            </div>
             <div class="input-group has-validation mb-3">
                <span class="input-group-text"><i class="fa-solid fa-house-chimney"></i></span>
                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Address"  asp-for="LivingLocation" >
                    <label asp-for="LivingLocation"></label>
                </div>
                <span  class="d-block invalid-feedback" asp-validation-for="LivingLocation"></span>
            </div>
            <!-- Submit button -->
           <div class="mb-4  mt-4">
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-pen-to-square mx-2 fa-lg"></i><span>Edit</span>  </button>
                <a onClick="history.go(-1); return false;" class="btn btn-link   mx-2" style="background-color:#DCEEFB">Cancel</a>
            </div>
        </form>
    </div>
</div>

