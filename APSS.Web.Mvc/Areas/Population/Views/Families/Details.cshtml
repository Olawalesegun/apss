@model FamilyDto



<div class="card mt-2">
    <div class="d-inline">
    </div>
    <div class="card-body">
        <div class="d-flex ">

            <i class="fa-solid fa-caret-left fs-1 " style="padding-left:3px"></i> <h3>Family Information</h3>
        </div>
          <table class="table user-view-table m-0 t ">
            <tbody>
                <tr class="">
                    <th class="align-middle">@Html.DisplayNameFor(m => m.Id)</th>
                    <td>@Model.Id </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.Name)</th>
                    <td>@Model.Name  </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.LivingLocation)</th>
                    <td> @Model.LivingLocation </td>
                </tr>
               
                
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.CreatedAt)</th>
                    <td>
                        @Model.CreatedAt
                    </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.ModifiedAt)</th>
                    <td>
                        @Model.ModifiedAt
                    </td>
                </tr>
                <tr></tr>
            </tbody>
        </table>
        <br />
        <div class="table-responsive">
            <div cllass="d-inline  ">
                <div class="mx-lg-2 mx-sm-1 mx-sm-1 my-1 d-flex justify-content-between">
                    <div class="">
                        <a class="btn btn-link text-decoration-none mx-1 " href="@(Routes.Dashboard.Population.Individuals.Add)?id=@Model!.Id"><span>@Icon.Plus.Render() Add Individual </span>  </a>
                        <a class="btn btn-link text-decoration-none mx-1 " href="@(Routes.Dashboard.Population.Families.GetAll)?id=@Model!.Id"><span>@Icon.Seeding.Render() Individuals</span>  </a>
                    </div>
                    <div class="d-flex">
                        <a class="btn btn-outline-primary mx-1 " href="@(Routes.Dashboard.Population.Families.Update.FullPath)?id=@Model!.Id">@Icon.Pen.Render()<span>Edit</span> </a>
                        <a class="btn btn-danger mx-1 " onclick="showDeletionModal('Are you sure you want to delete family `@Model.Name`?', @Model.Id)">@Icon.TrashCan.Render()<span>Delete</span>  </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        
@await Html.DeleteDialogAsync()