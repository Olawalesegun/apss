@model FamilyDto
    @await Html.PartialAsync("_PupolationNavBar")

<div class="card mt-2">
    <div class="d-inline">
    </div>
    <div class="card-body">
        <div class="d-flex ">

            <i class="fa-solid fa-caret-left fs-1 " style="padding-left:3px"></i> <h3>Family Information </h3>
        </div>
        <table class="table user-view-table m-0 t ">
            <tbody>
                <tr class="">
                    <th class="align-middle">@Html.DisplayNameFor(m => m.Id)</th>
                    <td>@Model.Id </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.Name)</th>
                    <td>@Model.Name  </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.LivingLocation)</th>
                    <td> @Model.LivingLocation </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.UserName)</th>
                    <td> @Model.UserName </td>
                </tr>
                
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.CreatedAt)</th>
                    <td>
                        @Model.CreatedAt
                    </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.ModifiedAt)</th>
                    <td>
                        @Model.ModifiedAt
                    </td>
                </tr>
                <tr></tr>
            </tbody>
        </table>
        <br />
        <div cllass="d-inline pt-2">
            <a class="btn btn-outline-dark mx-1 my-2" onclick="history.go(-1)"> <i class="fa-solid fa-arrow-right mx-2"> </i><span>Back</span> </a>
            <a class="btn btn-outline-primary mx-1 pr-1 my-2 " asp-route-id="@Model.Id" asp-area="Population" asp-controller="Individuals" asp-action="AddIndividual"> <i class="fa-solid fa-plus mx-1 "> </i><span> Add Individual</span> </a>
            <a class="btn btn-outline-primary mx-1 pr-1 my-2 " asp-route-id="@Model.Id" asp-area="Population" asp-controller="Families" asp-action="UpdateFamily"> <i class="fa-solid fa-pen-to-square mx-1 "> </i><span>Edit</span> </a>
            <a class="btn btn-outline-danger mx-1 my-2" asp-area="Population" asp-controller="Families" asp-action="ConfirmDeleteFamily" asp-route-Id="@Model.Id"> <i class="fa-solid fa-trash-can mx-1"></i><span>Delete</span>  </a>
            <a id="III" class="btn btn-outline-dark my-2 text-decoration-none mx-1" asp-route-id="@Model.Id" asp-area="Population" asp-controller="Families" asp-action="GetFamilyIndividuals"><span class="">Individuals </span> </a>
        </div>
    </div>
</div>

