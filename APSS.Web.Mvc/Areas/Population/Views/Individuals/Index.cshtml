
@model CrudViewModel<IndividualDto>

        <div class="table-rsponsive">
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>@Icon.Hashtag.Render()</th>
                <th>@Html.DisplayNameFor(m => m.First().Name)</th>
                <th>@Html.DisplayNameFor(m => m.First().Address)</th>
                <th>@Html.DisplayNameFor(m => m.First().Sex)</th>
                <th>@Html.DisplayNameFor(m => m.First().CreatedAt)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Sex</td>
                    <td>@item.CreatedAt</td>

                    <td class="align-middle center">
                        <div class=" dropdown">
                            <a href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                @Icon.Bars.Render()
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item justified-content" href="@(Routes.Dashboard.Population.Individuals.Details)?id=@item.Id">
                                        Details @Icon.Info.Render()
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item justified-content" onclick="showDeletionModal('Are you sure you want to delete Individual `@item.Name`?', @item.Id)">
                                        Delete @Icon.TrashCan.Render()
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item justified-content" href="@(Routes.Dashboard.Population.Individuals.Update)?id=@item.Id">
                                        Update @Icon.Pen.Render()
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item justified-content" href="@(Routes.Dashboard.Population.Skills)?id=@item.Id">
                                        Manage skills  @Icon.UsersGear.Render()
                                    </a>
                                </li>
                                  <li>
                                    <a class="dropdown-item justified-content"  href="@(Routes.Dashboard.Population.Voluntaries)?id=@item.Id">
                                        Manage Voluntaries  @Icon.UsersGear.Render()
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex justified-content-between"  href="@(Routes.Dashboard.Population.Skills.Add)?id=@item.Id">
                                        <span>Add Skill</span>  <span>@Icon.UserPlus.Render()</span>
                                    </a>
                                </li>
                                 <li>
                                    <a class="dropdown-item d-flex justified-content-between"  href="@(Routes.Dashboard.Population.Voluntaries.Add)?id=@item.Id">
                                        <span>Add Voluntary</span>  <span>@Icon.UserPlus.Render()</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<partial name="Layout/Paginator" model="@Model.Params.Page" />
@await Html.DeleteDialogAsync()