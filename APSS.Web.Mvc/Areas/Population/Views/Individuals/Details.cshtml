@model APSS.Web.Dtos.IndividualDto

<div class="card mt-2">
    <div class="d-inline">
    </div>
    <div class="card-body">
        <div class="d-flex ">

            <i class="fa-solid fa-caret-left fs-1 " style="padding-left:3px"></i> <h3>Individual Information</h3>
        </div>
           <table class="table user-view-table m-0 t ">
            <tbody>
                <tr class="">
                    <th class="align-middle">@Html.DisplayNameFor(m => m.Id)</th>
                    <td>@Model.Id </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.Name)</th>
                    <td>@Model.Name  </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.Address)</th>
                    <td> @Model.Address </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.Job)</th>
                    <td> @Model.Job </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.PhonNumber)</th>
                    <td> @Model.PhonNumber </td>
                </tr>
               <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.NationalId)</th>
                    <td> @Model.NationalId </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.Sex)</th>
                    <td> @Model.Sex</td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.SocialStatus)</th>
                    <td> @Model.SocialStatus </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.DateOfBirth)</th>
                    <td> @Model.DateOfBirth </td>
                </tr>
               
               
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.CreatedAt)</th>
                    <td>
                        @Model.CreatedAt
                    </td>
                </tr>
                <tr>
                    <th class="align-middle">@Html.DisplayNameFor(m => m.ModifiedAt)</th>
                    <td>
                        @Model.ModifiedAt
                    </td>
                </tr>
                <tr></tr>
            </tbody>
        </table>
        <br />
        <div class="table-responsive">
            <div cllass="d-inline  ">
                <div class="mx-lg-2 mx-sm-1 mx-sm-1 my-1 d-flex justify-content-between">
                    <div class="">
                        <a class="btn btn-link text-decoration-none mx-1 "  href="@(Routes.Dashboard.Population.Skills.Add)?id=@Model.Id"><span>@Icon.Plus.Render() Add Skill </span>  </a>
                        <a class="btn btn-link text-decoration-none mx-1 "  href="@(Routes.Dashboard.Population.Voluntaries.Add)?id=@Model.Id"><span>@Icon.Plus.Render() Add Voluntaries </span>  </a>
                        <a class="btn btn-link text-decoration-none mx-1 "  href="@(Routes.Dashboard.Population.Skills)?id=@Model.Id"><span>@Icon.Seeding.Render() Skills</span>  </a>
                        <a class="btn btn-link text-decoration-none mx-1 "  href="@(Routes.Dashboard.Population.Voluntaries)?id=@Model.Id"><span>@Icon.Seeding.Render() Voluntaries</span>  </a>
                    </div>
                    <div class="d-flex">
                        <a class="btn btn-outline-primary mx-1 " href="@(Routes.Dashboard.Population.Individuals.Update.FullPath)?id=@Model!.Id">@Icon.Pen.Render()<span>Edit</span> </a>
                        <a class="btn btn-danger mx-1 " onclick="showDeletionModal('Are you sure you want to delete Individual `@Model.Name`?', @Model.Id)">@Icon.TrashCan.Render()<span>Delete</span>  </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*@await Html.DeleteDialogAsync()*@