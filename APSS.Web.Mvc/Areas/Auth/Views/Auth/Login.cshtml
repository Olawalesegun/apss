@model SignInForm

@{
    Layout = "Layout/Generic";
    ViewData["Title"] = "Sign In";
}

<div class="row align-content-center min-vh-100 m-0">
    <div class="col-lg-4 offset-lg-4">
        <h1 class="display-4 text-center mb-5">Agriculture Scan System</h1>
        <h4 class="text-center mb-5">Sign in to your account</h4>

        @await Html.PartialAsync("_UnhandledExceptionMessage")

        <form method="post" action="@Routes.Auth.SignIn.FullPath" asp-antiforgery="true" class="needs-validation" novalidate>
            <!-- ID input -->
            <div class="input-group has-validation mb-3">
                <span class="input-group-text">@Icon.Hashtag.Render()</span>
                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Account ID" asp-for="AccountId" pattern="^[0-9]{6,}$" aria-describedby="accountIdValidation">
                    <label>Account ID</label>
                </div>
                <span id="accountIdValidation" class="d-block invalid-feedback" asp-validation-for="AccountId"></span>
            </div>

            <!-- Password input -->
            <div class="input-group has-validation mb-3">
                <span class="input-group-text">@Icon.Lock.Render()</span>
                <div class="form-floating flex-grow-1">
                    <input type="password" class="form-control" placeholder="Enter your password" asp-for="Password" pattern="^.{6,}$">
                    <label>Password</label>
                </div>
                <span class="d-block invalid-feedback" asp-validation-for="Password"></span>
            </div>

            <div class="d-flex mt-5">
                <!-- Remember me check -->
                <div class="form-check flex-grow-1">
                    <input class="form-check-input" type="checkbox" id="rememberMeCheck" asp-for="IsPersistent">
                    <label class="form-check-label" for="rememberMeCheck">Remember me</label>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary px-3">Sign In</button>
            </div>
        </form>
    </div>
</div>