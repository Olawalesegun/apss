@model IEnumerable<APSS.Web.Dtos.SurveyEntryDto>


<!--table-->

<div class="aling" id="loader"></div>

<div class="   p-2  col-ms-12  my-0 mt-2  rounded ml-2 " id="table">

    <form class="row d-flex justify-content-between  d-inline mb-3 " asp-controller="AnimalGroup" asp-action="Index" method="post">
           </form>

    <div class="col-sm-12  ">

        @if (ViewBag.SearchResult != null)
        {
            <span class="text-danger">@ViewBag.SearchResult</span>
        }

        <div class=" mt-3 bg-light table-rsponsive mb-3 table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar" id="">
            <table class="table table-hover table-responsive table-bordered   table-striped  " id="sortTable">
                <thead class="table-light">
                    <tr class="header  bg-fixed " style="border-bottom:2px #5C5C5C solid;">
                        <th class=" fw-bold align-middle">@Html.DisplayNameFor(m=>m.Id)</th>
                        <th class=" fw-bold align-middle">@Html.DisplayNameFor(m=>m.Survey)</th>
                        <th class=" fw-bold align-middle"> @Html.DisplayNameFor(m=>m.MadeBy)</th>
                        <th class=" fw-bold align-middle"> @Html.DisplayNameFor(m=>m.CreatedAt)</th>
                        <th style="width:20px;" class="fw-bold align-middle"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr >
                        <td>@item.Id</td>
                        <td>@item.Survey.Name</td>
                        <td>@item.MadeBy.Name</td>
                        <td>@item.CreatedAt</td>
                        <td class="align-middle center">

                            <div class=" dropend">
                                <a class="" role="button" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <li><a class="dropdown-item" asp-controller="SurveyEntry" asp-action="SurveyEntryDetails"><div class="d-flex justify-content-between"> <span>Details</span>  <span><i class="fa-solid fa-info"></i> </span> </div> </a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
       </div>
    </div>
    <div class="d-flex container justify-content-center">
        <div class=" col-sm-12 px-sm-2 col-lg-4 col-md-4">
            <ul class="pagination d-flex justify-content-between">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item"><a class="page-link" href="#">6</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </div>
    </div>
</div>

@section scripts{
<script>
       $(document).ready(function(){
    $(".sidebar ul li.active").removeClass('active');
    $("#surveyManagement").addClass('active');
    });
    document.getElementById("nav-system-name").innerHTML="Survey Management";
    document.getElementById("media-system-name").innerHTML="Survey Management";
   
    $("#surveys").removeClass('actives');
    $("#surveysEntry").addClass('actives');
   
</script>
}