@model SurveyDto

<div class="card mt-2">
    <div class="d-inline">
    </div>
    <div class="card-body">
        <div class="d-flex ">

            <i class="fa-solid fa-caret-left fs-1 " style="padding-left:3px"></i> <h3>Survey Information </h3>
        </div>
        <table class="table user-view-table m-0 t ">
            <tbody>
                <tr class="">
                    <td class="label"><label>@Html.DisplayNameFor(m => m.Id)</label></td>
                    <td>@Model.Id </td>
                </tr>
                <tr>
                    <td> <label>@Html.DisplayNameFor(m => m.Name);</label></td>
                    <td>@Model.Name  </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.ExpirationDate)</label>  </td>
                    <td> @Model.ExpirationDate </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.IsActive)</label>  </td>
                    <td> @Model.IsActive </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.CreatedBy)</label>  </td>
                    <td> @Model.CreatedBy.Name </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.CreatedAt)</label>  </td>
                    <td>
                        @Model.CreatedAt
                    </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.ModifiedAt)</label>  </td>
                    <td>
                        @Model.ModifiedAt
                    </td>
                </tr>
                <tr></tr>
            </tbody>
        </table>
        <br />
        <div class="table-responsive">
            <div cllass="d-inline  ">
                <div class="mx-lg-2 mx-sm-1 mx-sm-1 my-1 d-flex justify-content-between">
                    <div class="">
                        <a class="btn btn-link text-decoration-none mx-1 " href="@(Routes.Dashboard.Surveys.Questions.Add)?id=@Model!.Id"><span>@Icon.Plus.Render() Add Question </span>  </a>
                        <a class="btn btn-link text-decoration-none mx-1 " href="@(Routes.Dashboard.Surveys.Questions)?id=@Model!.Id"><span>@Icon.Seeding.Render() Questions</span>  </a>
                        <a class="btn btn-link text-decoration-none mx-1 " href="@(Routes.Dashboard.Surveys.Entries)?id=@Model!.Id"><span>@Icon.Seeding.Render() Entries</span>  </a>
                    </div>
                    <div class="d-flex">
                        <a class="btn btn-outline-primary mx-1 " href="@(Routes.Dashboard.Surveys.Surveys.Update.FullPath)?id=@Model!.Id">@Icon.Pen.Render()<span>Edit</span> </a>
                        <a class="btn btn-danger mx-1 " onclick="showDeletionModal('Are you sure you want to delete family `@Model.Name`?', @Model.Id)">@Icon.TrashCan.Render()<span>Delete</span>  </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        
@await Html.DeleteDialogAsync()
