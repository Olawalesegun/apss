@model APSS.Web.Dtos.SurveyDto
<div class="card mt-2">
    <div class="card-body">
        <div class="d-flex "><h5>Confrim Delete Survey  </h5> </div>
        <table class="table user-view-table m-0  ">
            <tbody style="font-size:14px">
                <tr class="">
                    <th>@Html.DisplayNameFor(s=>s.Id)</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(s=>s.Name)</th>
                    <td> @Model.Name</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(s=>s.IsActive)</th>
                    <td>@Model.IsActive</td>
                </tr>
                <tr>
                    <th> @Html.DisplayNameFor(s=>s.ExpirationDate)</th>
                    <td> @Model.ExpirationDate</td>
                </tr>
                 <tr>
                    <th> @Html.DisplayNameFor(s=>s.UserName)</th>
                    <td>  @Model.Name</td>
                </tr>
                 <tr>
                    <th>@Html.DisplayNameFor(s=>s.CreatedAt)</th>
                    <td> @Model.CreatedAt</td>
                </tr>
                 <tr>
                    <th> @Html.DisplayNameFor(s=>s.ModifiedAt)</th>
                    <td> @Model.ModifiedAt</td>
                </tr>
               
            </tbody>
        </table>
        <br />
        <div class="mb-4  mt-4">
            <form method="post" asp-area="Surveys" asp-controller="Surveys" asp-action="DeleteSurvey" asp-route-Id="@Model.Id">
                <button type="submit" class="btn btn-danger">Confirm</button>
                <a onClick="history.go(-1); return false;" class="btn btn-link   mx-2" style="background-color:#DCEEFB">Cancel</a>
                </form>
            </div>
    </div>
</div>