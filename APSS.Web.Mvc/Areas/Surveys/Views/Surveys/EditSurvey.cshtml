@model SurveyEditForm
<div class="container-fluid px-3 py-3  mx-4 my-1">
    <div class="col-sm-6">
        <div class="d-flex justify-content-center">
            <h4 >Update Survey </h4>
        </div>

        <form class="mt-3" method="post" asp-area="Surveys" asp-controller="Surveys" asp-action="EditSurvey">
           <input type="number" asp-for="Id" hidden />
              <!-- survey Name -->
          <div class="input-group has-validation mb-3">
                <span class="input-group-text"><i class="fa-solid fa-hashtag"></i></span>
                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Name "  asp-for="Name" >
                    <label asp-for="Name"></label>
                </div>
                <span  class="d-block invalid-feedback" asp-validation-for="Name"></span>
            </div>
            <!-- post and end survey date -->
                        <div class="datepicker input-group.date input-group has-validation mb-3">
                <span class="input-group-text"><i class="fa-solid fa-hashtag"></i></span>
                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Expiration Date "  asp-for="ExpirationDate" >
                    <label asp-for="ExpirationDate"></label>
                </div>
                <span  class="d-block invalid-feedback" asp-validation-for="ExpirationDate"></span>
            </div>

            <!-- Text input survey description-->
            <div class="form-check flex-grow-1">
                    <input class="form-check-input" type="checkbox"  asp-for="IsActive">
                    <label class="form-check-label" asp-for="IsActive"> </label>
                </div> 

                  <div class="mb-4  mt-4">
                <button type="submit" class="btn btn-primary">Edit</button>
                <a onClick="history.go(-1); return false;" class="btn btn-link   mx-2" style="background-color:#DCEEFB">Cancel</a>
            </div>
        </form>
        </div>
        </div>