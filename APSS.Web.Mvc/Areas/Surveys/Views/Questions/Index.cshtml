@model CrudViewModel<QuestionDto>

<div class="   p-2  col-ms-12  my-0 mt-2  rounded ml-2 " id="table">

    <div class="col-sm-12  ">

        <div class=" mt-3 bg-light table-rsponsive mb-3 table-success table-wrapper-scroll-y table-wrapper-scroll-x my-custom-scrollbar" id="">

            <table class="table table-hover table-responsive table-bordered   table-striped  " id="sortTable">

                <thead class="table-light">
                    <tr class="header  bg-fixed " style="border-bottom:2px #5C5C5C solid;">
                        <th class="fw-bold align-middle">@Html.DisplayNameFor( m=>m.First().Index)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor( m=>m.First().Text)</th>
                        <th class="fw-bold align-middle"> @Html.DisplayNameFor(m=>m.First().IsRequired)</th>
                        <th class="fw-bold align-middle">@Html.DisplayNameFor(m=> m.First().QuestionType)</th>
                        <th class="fw-bold align-middle"> @Html.DisplayNameFor(m=>m.First().Survey)</th>
                        <th style="width:20px;" class="fw-bold align-middle"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {


                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Text</td>
                            <td>@item.IsRequired</td>
                            <td>@item.QuestionType</td>
                            <td>@item.Survey.Name</td>
                            <td class="align-middle center">

                                <div class=" dropend">
                                    <a class="" role="button" id="dropdownMenuLink"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <form asp-area="Surveys" asp-controller="Questions" asp-action="DeleteQuestion" asp-route-id="@item.Id" method="post">
                                        <li><button type="submit" class="dropdown-item"><div class="d-flex justify-content-between"> <span>Delete</span>  <span><i class="fa-solid fa-trash-can"></i> </span> </div></button></li>

                                        </form>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="Layout/Paginator" model="@Model.Params.Page" />