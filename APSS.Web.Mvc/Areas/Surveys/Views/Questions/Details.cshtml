@using APSS.Web.Dtos
@model QuestionDto

<div class="card mt-2">
    <div class="d-inline">
    </div>
    <div class="card-body">
        <div class="d-flex ">

            <i class="fa-solid fa-caret-left fs-1 " style="padding-left:3px"></i> <h3>Question Information</h3>
        </div>
          <table class="table user-view-table m-0 t ">
            <tbody>
                <tr class="">
                    <td class="label"><label>@Html.DisplayNameFor(m => m.Id)</label></td>
                    <td>@Model.Id </td>
                </tr>
                <tr>
                    <td> <label>@Html.DisplayNameFor(m => m.Text);</label></td>
                    <td>@Model.Text  </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.Index)</label>  </td>
                    <td> @Model.Index </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.IsRequired)</label>  </td>
                    <td> @Model.IsRequired </td>
                </tr>
                 @if (Model.QuestionType==QuestionTypeDto.MultipleChoiceQuestion)
                {
                 <tr>
                    <td><label>@Html.DisplayNameFor(q=>q.CanMultiSelect)  </label> </td>
                    <td>@Model.CanMultiSelect</td>
                 </tr>
              <tr>
                <td><label>@Html.DisplayNameFor(q=>q.CandidateAnswers)</label></td>
                <td>

                   @foreach (var item in Model.CandidateAnswers!)
                   {
                       @item.ToString()!.Concat(", ")
                       
                   }

                 </td>
              </tr>
                   
                }
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.Survey)</label>  </td>
                    <td> @Model.Survey.Name </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.CreatedAt)</label>  </td>
                    <td>
                        @Model.CreatedAt
                    </td>
                </tr>
                <tr>
                    <td><label>@Html.DisplayNameFor(m => m.ModifiedAt)</label>  </td>
                    <td>
                        @Model.ModifiedAt
                    </td>
                </tr>
                <tr></tr>
            </tbody>
        </table>
        <br />
        <div class="table-responsive">
            <div cllass="d-inline  ">
                <div class="mx-lg-2 mx-sm-1 mx-sm-1 my-1 d-flex justify-content-between">
                    
                    <div class="d-flex">
                        <a class="btn btn-outline-primary mx-1 " href="@(Routes.Dashboard.Surveys.Questions.Update)?id=@Model!.Id">@Icon.Pen.Render()<span>Edit</span> </a>
                        <a class="btn btn-danger mx-1 " onclick="showDeletionModal('Are you sure you want to delete Question `@Model.Text`?', @Model.Id)">@Icon.TrashCan.Render()<span>Delete</span>  </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        
@await Html.DeleteDialogAsync()
