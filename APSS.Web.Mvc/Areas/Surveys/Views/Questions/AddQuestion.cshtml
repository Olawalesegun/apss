@model QuestionAddForm
<div class="container-fluid  mt-3    ">
    <div class="row d-flex ">
        <div class="col-xl-7  col-md-9 col-12 border rounded shadow-sm  p-2">
            <div class="d-flex  justify-content-center pb-4 pt-4">
                <div class=""> <h3 class="text-decoration-underline "> Add Question </h3></div>
            </div>
            <form class="" method="post"  asp-area="Surveys" asp-controller="Questions"  asp-action="AddQuestion">

                <input asp-for="SurveyId" hidden/>
                <div class="row d-flex justify-content-center mb-3">
                    <div class="col-6">
                <label asp-for="QuestionType"></label>

            <select asp-for="QuestionType"
            asp-items="Html.GetEnumSelectList<QuestionTypeDto>()"
