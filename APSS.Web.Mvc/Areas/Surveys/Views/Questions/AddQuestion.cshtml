                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Enter Choice"  asp-for="CandidateAnswers"  >
                    <label >Choice Three</label>
                </div>
            </div>
                    </div>
                   
                         <!--4-->
                    <div class=" col-6" id="box4">
                      <div class="input-group has-validation mb-3">
                <span class="input-group-text"><i class="fa-regular fa-rectangle-list"></i></span>
                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Enter Choice"  asp-for="CandidateAnswers"  >
