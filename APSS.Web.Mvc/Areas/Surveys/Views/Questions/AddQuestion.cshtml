            </select>
          </div>
                   
            <div class="col-6 ">
             <div class="form-check flex-grow-1 mt-4 ">
                    <input class="form-check-input " type="checkbox"  asp-for="IsRequired">
                    <label class="form-check-label" asp-for="IsRequired"> </label>
                </div> 
          </div>
                </div>
               <div class="input-group has-validation mb-3">
                <span class="input-group-text"><i class="fa-regular fa-circle-question"></i></span>
                <div class="form-floating flex-grow-1">
                    <input type="text" class="form-control" placeholder="Why What...?"  asp-for="Text" >
                    <label asp-for="Text"></label>
                </div>
                <span  class="d-block invalid-feedback" asp-validation-for="Text"></span>
            </div>

            <div class="input-group  mb-3" id="canmultiple" >
